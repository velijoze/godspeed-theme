<script>
  function initMaps() {
    // Address 1 Map
    {% if section.settings.address1_map_style == 'google_map' and section.settings.address1_latitude != blank and section.settings.address1_longitude != blank %}
    var location1 = {lat: {{ section.settings.address1_latitude }}, lng: {{ section.settings.address1_longitude }}};
    var map1 = new google.maps.Map(document.getElementById('map1'), {
      zoom: 15,
      center: location1
    });
    var marker1 = new google.maps.Marker({
      position: location1,
      map: map1,
      title: '{{ section.settings.address1_title }}'
    });
    {% endif %}

    // Address 2 Map
