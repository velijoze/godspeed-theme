<div data-section-id="{{ section.id }}" data-section-type="section-banner-v3" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v3 mt-all">
    <div class="container container-v2">
      <div class="row">      
        <div class="col-lg-4 col-md-4 col-12 col-sm-12">
          <div class="banner-ver">
            <div class="banner-item">
              <a href="{{section.settings.url_button_banner1}}" class="box-img d-block">
                {% if section.settings.banner_img1 != blank %}
                <img data-src="{{section.settings.banner_img1 | img_url: 'master'}}" class="lazyload img-fluid w-100" alt="_img">
                {% else %}
                <img data-src="//via.placeholder.com/720x600" class="lazyload img-fluid w-100" alt="_img">
                {% endif %}
              </a>
              <div class="content">
                {% if section.settings.sub_title1 != blank %}
                <h3 class="sub-title" style="color: {{section.settings.color_subtitle}}">{{section.settings.sub_title1}}</h3>
                {% endif %}
                {% if section.settings.title_banner1 != blank %}
                <h3 class="title-banner" style="color: {{section.settings.color_title_banner}}">{{section.settings.title_banner1}}</h3>
                {% endif %}
                {% if section.settings.button_banner1 != blank %}
                <a href="{{section.settings.url_button_banner1}}" class="btn-{{ section.id }}">{{section.settings.button_banner1}}<i class="fa fa-angle-double-right" aria-hidden="true"></i></a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>    
        <div class="col-lg-4 col-md-4 col-12 col-sm-12">
          <div class="banner-ver">
            <div class="banner-item">
              <a href="{{section.settings.url_button_banner2}}" class="box-img d-block">
                {% if section.settings.banner_img2 != blank %}
                <img data-src="{{section.settings.banner_img2 | img_url: 'master'}}" class="lazyload img-fluid w-100" alt="_img">
                {% else %}
                <img data-src="//via.placeholder.com/720x600" class="lazyload img-fluid w-100" alt="_img">
                {% endif %}
              </a>
              <div class="content">
                {% if section.settings.sub_title2 != blank %}
                <h3 class="sub-title" style="color: {{section.settings.color_subtitle}}">{{section.settings.sub_title2}}</h3>
                {% endif %}
                {% if section.settings.title_banner2 != blank %}
                <h3 class="title-banner" style="color: {{section.settings.color_title_banner}}">{{section.settings.title_banner2}}</h3>
                {% endif %}
                {% if section.settings.button_banner2 != blank %}
                <a href="{{section.settings.url_button_banner2}}" class="btn-{{ section.id }}">{{section.settings.button_banner2}}<i class="fa fa-angle-double-right" aria-hidden="true"></i></a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>    
        <div class="col-lg-4 col-md-4 col-12 col-sm-12">
          <div class="banner-ver">
            <div class="banner-item">
              <a href="{{section.settings.url_button_banner3}}" class="box-img d-block">
                {% if section.settings.banner_img3 != blank %}
                <img data-src="{{section.settings.banner_img3 | img_url: 'master'}}" class="lazyload img-fluid w-100" alt="_img">
                {% else %}
                <img data-src="//via.placeholder.com/720x600" class="lazyload img-fluid w-100" alt="_img">
                {% endif %}
              </a>
              <div class="content">
                {% if section.settings.sub_title3 != blank %}
                <h3 class="sub-title" style="color: {{section.settings.color_subtitle}}">{{section.settings.sub_title3}}</h3>
                {% endif %}
                {% if section.settings.title_banner3 != blank %}
                <h3 class="title-banner" style="color: {{section.settings.color_title_banner}}">{{section.settings.title_banner3}}</h3>
                {% endif %}
                {% if section.settings.button_banner3 != blank %}
                <a href="{{section.settings.url_button_banner3}}" class="btn-{{ section.id }}">{{section.settings.button_banner3}}<i class="fa fa-angle-double-right" aria-hidden="true"></i></a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
  .section-banner-v3 .banner-item .content .btn-{{ section.id }} {
    color: {{section.settings.color_url}};
  }
  .section-banner-v3 .banner-item .content .btn-{{ section.id }}:hover {
    color: {{section.settings.color_url_hover}};
  }
</style>

