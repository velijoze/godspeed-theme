{% stylesheet %}
.shipping-partners-section {
  padding: 40px 0;
  background-color: #f8f9fa;
}

.shipping-partners-section.is-compact { padding: 16px 0; }

.section-header { margin-bottom: 16px; }

.section-title {
  font-family: var(--font-heading);
  font-size: 1.5rem;
  font-weight: 600;
  color: #333;
  margin-bottom: 8px;
  line-height: 1.25;
}

.section-description {
  font-family: var(--font-body);
  font-size: 0.95rem;
  color: #666;
  max-width: 640px;
  margin: 0 auto;
  line-height: 1.4;
}

.shipping-partners-grid { max-width: 1000px; margin: 0 auto; }

.partner-logo-wrapper {
  padding: 8px;
  transition: transform 0.25s ease;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: calc(var(--logo-h) + 20px);
}

.partner-logo-wrapper:hover { transform: translateY(-2px); }

.partner-link { display: block; text-decoration: none; }

.partner-logo {
  max-height: var(--logo-h);
  max-width: 160px;
  object-fit: contain;
  filter: grayscale(100%);
  opacity: 0.9;
  transition: filter 0.25s ease, opacity 0.25s ease, transform 0.25s ease;
}

.partner-logo-wrapper:hover .partner-logo { filter: grayscale(0%); opacity: 1; }

.partner-name {
  font-family: var(--font-body);
  font-size: 0.85rem;
  font-weight: 500;
  color: #666;
  margin: 0;
}

@media (max-width: 768px) {
  .section-title { font-size: 1.35rem; }
}

@media (max-width: 576px) {
  .section-title { font-size: 1.25rem; }
}
{% endstylesheet %}

