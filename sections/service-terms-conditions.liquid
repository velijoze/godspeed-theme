<div data-section-id="{{ section.id }}" data-section-type="service-terms-conditions" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <section class="terms-header">
    <div class="container">
      <div class="pt-40 pb-20">
        <div class="wrap-bread-crumb">
          {% include 'breadcrumb' %}
        </div>
      </div>
    </div>
  </section>

  <section class="terms-title-section">
    <div class="container">
      <div class="terms-title-wrapper">
        <div class="text-center">
          <h1 class="terms-title">{{ section.settings.page_title | default: "Service Terms & Conditions" }}</h1>
          <div class="terms-subtitle">{{ section.settings.page_subtitle | default: "Professional bicycle and e-bike service terms governing our workshop services, repairs, and maintenance offerings." }}</div>
        </div>
      </div>
    </div>
  </section>

  <section class="terms-content-section">
    <div class="container">
      <div class="terms-content-wrapper">

        <!-- Service Overview -->
        {% if section.settings.show_overview %}
        <div class="terms-block overview-highlight">
          <h2 class="section-title">{{ section.settings.overview_title | default: "Service Overview" }}</h2>
          
          <div class="service-types">
            <div class="service-type">
              <h3>Workshop Services</h3>
              <ul>
                <li>Basic maintenance and tune-ups</li>
                <li>Component repairs and replacements</li>
                <li>Wheel building and truing</li>
                <li>Brake and drivetrain servicing</li>
                <li>Safety inspections</li>
              </ul>
            </div>
            
            <div class="service-type">
              <h3>E-Bike Specialist Services</h3>
              <ul>
                <li>Motor diagnostics and repairs</li>
                <li>Battery testing and replacement</li>
                <li>Electrical system troubleshooting</li>
                <li>Software updates and programming</li>
                <li>Charging system maintenance</li>
              </ul>
            </div>
            
            <div class="service-type">
              <h3>Assembly Services</h3>
              <ul>
                <li>Complete bike assembly from box</li>
                <li>Professional setup and adjustments</li>
                <li>Safety check and test ride</li>
                <li>Delivery and setup service</li>
                <li>Custom fitting and positioning</li>
              </ul>
            </div>
          </div>
        </div>
        {% endif %}

        <!-- Service Terms -->
        {% if section.settings.show_terms %}
        <div class="terms-block service-highlight">
          <h2 class="section-title">{{ section.settings.terms_title | default: "Service Terms" }}</h2>
          
          <div class="terms-grid">
            <div class="terms-item">
              <h3>Booking & Scheduling</h3>
              <ul>
                <li><strong>Appointments:</strong> Required for all workshop services</li>
                <li><strong>Walk-ins:</strong> Subject to availability</li>
                <li><strong>Cancellation:</strong> 24-hour notice required</li>
                <li><strong>No-shows:</strong> May incur CHF 50 fee</li>
              </ul>
            </div>
            
            <div class="terms-item">
              <h3>Service Estimates</h3>
              <ul>
                <li>Free diagnostic assessment</li>
                <li>Written estimates for repairs over CHF 100</li>
                <li>Approval required before work begins</li>
                <li>Estimates valid for 30 days</li>
              </ul>
            </div>
            
            <div class="terms-item">
              <h3>Parts & Components</h3>
              <ul>
                <li>Genuine manufacturer parts when available</li>
                <li>Quality aftermarket alternatives approved</li>
                <li>Customer-supplied parts not warranted</li>
                <li>Old parts returned upon request</li>
              </ul>
            </div>
          </div>

          <div class="important-notice">
            <h3>Service Guarantee</h3>
            <p>All workshop services are guaranteed for <strong>90 days</strong> from completion date. This guarantee covers workmanship only and does not include normal wear or misuse of components.</p>
          </div>
        </div>
        {% endif %}

        <!-- Pricing & Payment -->
        {% if section.settings.show_pricing %}
        <div class="terms-block pricing-highlight">
          <h2 class="section-title">{{ section.settings.pricing_title | default: "Pricing & Payment" }}</h2>
          
          <div class="pricing-info">
            <div class="pricing-section">
              <h3>Service Pricing</h3>
              <div class="pricing-table">
                <div class="pricing-row">
                  <span class="service-name">Basic Tune-up</span>
                  <span class="price">CHF 89</span>
                </div>
                <div class="pricing-row">
                  <span class="service-name">Complete Service</span>
                  <span class="price">CHF 149</span>
                </div>
                <div class="pricing-row">
                  <span class="service-name">E-bike Service</span>
                  <span class="price">CHF 179</span>
                </div>
                <div class="pricing-row">
                  <span class="service-name">Assembly Service</span>
                  <span class="price">CHF 150</span>
                </div>
                <div class="pricing-row">
                  <span class="service-name">Hourly Rate</span>
                  <span class="price">CHF 120/hour</span>
                </div>
              </div>
            </div>

            <div class="payment-terms">
              <h3>Payment Terms</h3>
              <ul>
                <li>Payment due upon service completion</li>
                <li>Cash, credit card, or bank transfer accepted</li>
                <li>Invoice available for business customers</li>
                <li>30-day payment terms for approved accounts</li>
                <li>Late payment fee: CHF 25 after 30 days</li>
              </ul>
            </div>
          </div>
        </div>
        {% endif %}

        <!-- Liability & Responsibility -->
        {% if section.settings.show_liability %}
        <div class="terms-block liability-section">
          <h2 class="section-title">{{ section.settings.liability_title | default: "Liability & Responsibility" }}</h2>
          
          <div class="liability-content">
            <div class="liability-item">
              <h3>Customer Responsibilities</h3>
              <ul>
                <li>Accurate description of service requirements</li>
                <li>Disclosure of previous repairs or modifications</li>
                <li>Removal of personal items from bicycle</li>
                <li>Prompt collection of completed work</li>
                <li>Payment of service fees as agreed</li>
              </ul>
            </div>
            
            <div class="liability-item">
              <h3>GODSPEED Responsibilities</h3>
              <ul>
                <li>Professional workmanship standards</li>
                <li>Use of appropriate tools and techniques</li>
                <li>Secure storage of customer property</li>
                <li>Clear communication of service scope</li>
                <li>Timely completion of agreed work</li>
              </ul>
            </div>

            <div class="limitation-notice">
              <h3>Limitation of Liability</h3>
              <p>Our liability is limited to the cost of services provided. We are not responsible for:</p>
              <ul>
                <li>Damage from pre-existing conditions</li>
                <li>Normal wear and tear of components</li>
                <li>Consequential or indirect damages</li>
                <li>Loss of use or business interruption</li>
                <li>Personal items left on bicycles</li>
              </ul>
            </div>
          </div>
        </div>
        {% endif %}

        <!-- Storage & Collection -->
        {% if section.settings.show_storage %}
        <div class="terms-block storage-section">
          <h2 class="section-title">{{ section.settings.storage_title | default: "Storage & Collection" }}</h2>
          
          <div class="storage-terms">
            <div class="storage-item">
              <h3>Storage Policy</h3>
              <ul>
                <li>Secure indoor storage provided</li>
                <li>30-day storage included in service</li>
                <li>Extended storage: CHF 10 per day after 30 days</li>
                <li>Maximum storage period: 90 days</li>
                <li>Items may be disposed of after 90 days</li>
              </ul>
            </div>
            
            <div class="storage-item">
              <h3>Collection Requirements</h3>
              <ul>
                <li>Photo ID required for collection</li>
                <li>Service receipt or reference number</li>
                <li>Payment must be completed before release</li>
                <li>Collection hours: Monday-Friday 9:00-18:00</li>
                <li>Saturday collection by appointment only</li>
              </ul>
            </div>
          </div>

          <div class="abandonment-notice">
            <h3>Abandonment Policy</h3>
            <p>Bicycles not collected within 90 days are considered abandoned. After notification attempts, items may be sold to recover storage costs. Any remaining proceeds will be held for the customer for 12 months.</p>
          </div>
        </div>
        {% endif %}

        <!-- Warranty Claims -->
        {% if section.settings.show_warranty_work %}
        <div class="terms-block warranty-highlight">
          <h2 class="section-title">{{ section.settings.warranty_title | default: "Warranty Work" }}</h2>
          
          <div class="warranty-terms">
            <h3>Manufacturer Warranty Claims</h3>
            <ul class="warranty-list">
              <li>Free assessment for warranty-eligible issues</li>
              <li>Direct coordination with manufacturers</li>
              <li>Customer notification of claim status</li>
              <li>Expedited processing when possible</li>
            </ul>

            <h3>Warranty Work Requirements</h3>
            <div class="warranty-requirements">
              <ul>
                <li>Original proof of purchase required</li>
                <li>Product within warranty period</li>
                <li>Defect covered under manufacturer terms</li>
                <li>No evidence of misuse or modification</li>
              </ul>
            </div>
          </div>
        </div>
        {% endif %}

        <!-- Contact & Disputes -->
        {% if section.settings.show_contact %}
        <div class="terms-block contact-section">
          <h2 class="section-title">{{ section.settings.contact_title | default: "Contact & Disputes" }}</h2>
          
          <div class="contact-info">
            <div class="contact-method">
              <h3>Service Department</h3>
              <p><strong>Email:</strong> {{ section.settings.service_email | default: "service@godspeed.ch" }}</p>
              <p><strong>Phone:</strong> {{ section.settings.service_phone | default: "+41 91 224 53 43" }}</p>
              <p><strong>Hours:</strong> Monday-Friday 9:00-18:00, Saturday 9:00-17:00</p>
            </div>
            
            <div class="contact-method">
              <h3>Workshop Locations</h3>
              <ul>
                <li><strong>Lugano:</strong> Via Pretorio 15, 6900 Lugano</li>
                <li><strong>Bellinzona:</strong> Via Stazione 8, 6500 Bellinzona</li>
                <li><strong>Locarno:</strong> Via Della Pace 12, 6600 Locarno</li>
                <li><strong>Zurich:</strong> Langstrasse 45, 8004 Zurich</li>
              </ul>
            </div>
          </div>

          <div class="dispute-resolution">
            <h3>Dispute Resolution</h3>
            <p>Any disputes arising from service work will be resolved through direct negotiation. If necessary, disputes will be subject to Swiss law and jurisdiction of local courts.</p>
          </div>
        </div>
        {% endif %}

      </div>
    </div>
  </section>
</div>

