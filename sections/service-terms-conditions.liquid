  padding: 25px;
  border-radius: 8px;
  border: 1px solid #e9ecef;
}

.contact-method h3 {
  font-size: 1.2rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 15px;
  line-height: 1.3;
}

.contact-method p {
  margin-bottom: 8px;
  line-height: 1.4;
  color: #495057;
}

.contact-method p:last-child {
  margin-bottom: 0;
}

.contact-method ul {
  margin-bottom: 0;
  padding-left: 20px;
}

.contact-method li {
  margin-bottom: 6px;
  line-height: 1.4;
  color: #495057;
}

.dispute-resolution {
  background: #e2e3e5;
  border: 1px solid #d3d6db;
  padding: 25px;
  border-radius: 8px;
}

.dispute-resolution h3 {
  font-size: 1.2rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 15px;
  line-height: 1.3;
}

.dispute-resolution p {
  margin-bottom: 0;
  line-height: 1.5;
  color: #495057;
}

@media (min-width: 768px) {
  .service-types {
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }
  
  .terms-grid {
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }
  
  .pricing-info {
    grid-template-columns: 1fr 1fr;
  }
  
  .liability-content {
    grid-template-columns: 1fr 1fr;
  }
  
  .storage-terms {
    grid-template-columns: 1fr 1fr;
  }
  
  .contact-info {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }
}

@media (max-width: 767px) {
  .terms-title {
    font-size: 2.2rem;
  }
  
  .terms-subtitle {
    font-size: 1.1rem;
  }
  
  .terms-content-section {
    padding: 40px 0;
  }
  
  .terms-block {
    padding: 25px 20px;
  }
  
  .section-title {
    font-size: 1.6rem;
  }
  
  .pricing-row {
    flex-direction: column;
    align-items: flex-start;
    gap: 5px;
  }
}
