<div data-section-id="{{ section.id }}" data-section-type="section-newsletter-v2" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">

  <div class="newsletter-v2">
    {% if settings.newsletter_form_action != blank %}
    {% assign form_action = settings.newsletter_form_action %}
    {% else %}
    {% assign form_action = '#' %}
    {% endif %}
    <div class="container container-v5">   
      <div class="nexio-newsletter" style="{% if section.settings.bg_color != blank %}background: {{section.settings.bg_color}}{% endif %}">
        <div class="newsletter-inner">
          <div class="newsletter-top">
            {% if section.settings.title_newletter != blank %}
            <h3 class="newsletter-title">{{section.settings.title_newletter}}</h3>
            {% endif %}
            {% if section.settings.content_newletter != blank %}
            <div class="newsletter-description">{{section.settings.content_newletter}}</div>
            {% endif %}
          </div>
                   
          <form class="newsletter-form-wrap" action="{{form_action}}" method="post">
            <input type="email" name="EMAIL" class="email" placeholder="{{ 'general.newsletter_form.newsletter_email2' | t }}" required >                 
            <button class="btn-submit submit-newsletter" type="submit">{{ 'general.newsletter_form.submit_footer' | t }}</button>
          </form>

        </div>        
      </div>
    </div>
  </div>

</div>

<style>
  .newsletter-v2 .nexio-newsletter .newsletter-title{
    color:{{section.settings.color_text}};
  }
  .newsletter-v2 .nexio-newsletter .newsletter-description{
    color:{{section.settings.color_text}};
  }
  .newsletter-v2 .newsletter-form-wrap input{
    color:{{section.settings.color_text}};
    border-color:{{section.settings.color_text}};
  }
  .newsletter-v2 .newsletter-form-wrap input::placeholder{
    color:{{section.settings.color_text}};
  }
  .newsletter-v2 .newsletter-form-wrap:before{
    color:{{section.settings.color_text}};
  }
  .newsletter-v2 .newsletter-form-wrap .btn-submit{
    color:{{section.settings.color_text}};
  }
</style>

{% schema %}
{
  "name": "NEWSLETTER V2",
  "settings": [
    {
      "type": "text",
      "id": "title_newletter",
      "label": "Heading Newsletter",
      "default": "Keep Connected"
    },
    {
      "type": "text",
      "id": "content_newletter",
      "label": "Content Newsletter",
      "default": "Get updates by subscribe our weekly newsletter"
    },
	{
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#1f2226"
    },
	{
      "type": "color",
      "id": "color_text",
      "label": "Color Text",
      "default": "#fff"
    },
 	{
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "presets": [
    {
      "name": "NEWSLETTER V2",
      "category": "HOME"
    }
  ]
}
{% endschema %}

