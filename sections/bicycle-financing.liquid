  padding: 0;
  margin: 0 0 1.5rem 0;
}

.contact-options li {
  padding: 0.5rem 0;
  color: #7f8c8d;
}

.btn-primary {
  background-color: #27ae60;
  border-color: #27ae60;
  padding: 0.75rem 2rem;
  font-weight: 600;
  border-radius: 25px;
  text-decoration: none;
  display: inline-block;
}

.btn-primary:hover {
  background-color: #229954;
  border-color: #229954;
  text-decoration: none;
}

@media (max-width: 768px) {
  .financing-title {
    font-size: 2rem;
  }
  
  .financing-subtitle {
    font-size: 1.3rem;
  }
  
  .financing-option-card {
    margin-bottom: 1rem;
  }
}
</style>

