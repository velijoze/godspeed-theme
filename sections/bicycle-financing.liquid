{% comment %}
  Bicycle Financing Section with HeyLight
  Provides comprehensive financing information and options
{% endcomment %}

<div class="section-bicycle-financing-{{ section.id }}" style="margin-top: {{ section.settings.margin_top | default: 40 }}px; margin-bottom: {{ section.settings.margin_bottom | default: 40 }}px;">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <!-- Header -->
        <div class="text-center mb-5">
          <h1 class="financing-title">{{ section.settings.page_title | default: "Bicycle Financing with HeyLight" }}</h1>
          <h2 class="financing-subtitle">{{ section.settings.page_subtitle | default: "Take Your E-Bike Home Today, Pay Over Time" }}</h2>
          <p class="financing-intro">{{ section.settings.intro_text | default: "Make your dream e-bike affordable with our flexible financing options through HeyLight - Switzerland's trusted payment solution." }}</p>
        </div>

        <!-- Financing Options -->
        <div class="row mb-5">
          <div class="col-md-6">
            <div class="financing-option-card">
              <h3 class="option-title">{{ section.settings.bnpl_title | default: "0% Interest Financing Available" }}</h3>
              <h4 class="option-subtitle">{{ section.settings.bnpl_subtitle | default: "Buy Now, Pay Later (BNPL)" }}</h4>
              <ul class="option-features">
                <li>{{ section.settings.bnpl_feature1 | default: "0% interest for qualified purchases" }}</li>
                <li>{{ section.settings.bnpl_feature2 | default: "3-24 month payment terms" }}</li>
                <li>{{ section.settings.bnpl_feature3 | default: "No hidden fees" }}</li>
                <li>{{ section.settings.bnpl_feature4 | default: "No paperwork required" }}</li>
                <li>{{ section.settings.bnpl_feature5 | default: "Take your bike home immediately" }}</li>
              </ul>
            </div>
          </div>
          <div class="col-md-6">
            <div class="financing-option-card">
              <h3 class="option-title">{{ section.settings.extended_title | default: "Extended Financing" }}</h3>
              <ul class="option-features">
                <li>{{ section.settings.extended_feature1 | default: "12-36 month terms available" }}</li>
                <li>{{ section.settings.extended_feature2 | default: "Up to CHF 10,000 financing" }}</li>
                <li>{{ section.settings.extended_feature3 | default: "Fixed monthly payments" }}</li>
                <li>{{ section.settings.extended_feature4 | default: "Competitive interest rates" }}</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Example Table -->
        <div class="financing-example mb-5">
          <h3 class="example-title">{{ section.settings.example_title | default: "Example: CHF 3,000 E-Bike" }}</h3>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>{{ section.settings.table_header1 | default: "Payment Plan" }}</th>
                  <th>{{ section.settings.table_header2 | default: "Monthly Payment" }}</th>
                  <th>{{ section.settings.table_header3 | default: "Total Cost" }}</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>{{ section.settings.plan_3_months | default: "3 months" }}</td>
                  <td>{{ section.settings.payment_3_months | default: "CHF 1,000" }}</td>
                  <td>{{ section.settings.total_3_months | default: "CHF 3,000" }}</td>
                </tr>
                <tr>
                  <td>{{ section.settings.plan_12_months | default: "12 months" }}</td>
                  <td>{{ section.settings.payment_12_months | default: "CHF 250" }}</td>
                  <td>{{ section.settings.total_12_months | default: "CHF 3,000" }}</td>
                </tr>
                <tr>
                  <td>{{ section.settings.plan_24_months | default: "24 months" }}</td>
                  <td>{{ section.settings.payment_24_months | default: "CHF 145" }}</td>
                  <td>{{ section.settings.total_24_months | default: "CHF 3,330" }}</td>
                </tr>
                <tr>
                  <td>{{ section.settings.plan_36_months | default: "36 months" }}</td>
                  <td>{{ section.settings.payment_36_months | default: "CHF 92.50" }}</td>
                  <td>{{ section.settings.total_36_months | default: "CHF 3,330" }}</td>
                </tr>
              </tbody>
            </table>
          </div>
          <p class="example-note">{{ section.settings.example_note | default: "36-month example includes 10.95% effective annual interest rate" }}</p>
        </div>

        <!-- Requirements and Process -->
        <div class="row mb-5">
          <div class="col-md-6">
            <div class="requirements-card">
              <h3 class="requirements-title">{{ section.settings.requirements_title | default: "Quick Approval Requirements" }}</h3>
              <p class="requirements-intro">{{ section.settings.requirements_intro | default: "To qualify, you need:" }}</p>
              <ul class="requirements-list">
                <li>{{ section.settings.requirement1 | default: "Swiss residency" }}</li>
                <li>{{ section.settings.requirement2 | default: "18+ years old" }}</li>
                <li>{{ section.settings.requirement3 | default: "Valid Swiss credit/debit card (Visa, Mastercard, Amex)" }}</li>
                <li>{{ section.settings.requirement4 | default: "Smartphone for verification" }}</li>
                <li>{{ section.settings.requirement5 | default: "Regular income" }}</li>
              </ul>
            </div>
          </div>
          <div class="col-md-6">
            <div class="process-card">
              <h3 class="process-title">{{ section.settings.process_title | default: "Instant Approval Process" }}</h3>
              <ol class="process-steps">
                <li><strong>{{ section.settings.step1_title | default: "Shop" }}</strong> - {{ section.settings.step1_desc | default: "Add items to your cart" }}</li>
                <li><strong>{{ section.settings.step2_title | default: "Choose" }}</strong> - {{ section.settings.step2_desc | default: "Select HeyLight at checkout" }}</li>
                <li><strong>{{ section.settings.step3_title | default: "Verify" }}</strong> - {{ section.settings.step3_desc | default: "Quick smartphone verification (under 5 minutes)" }}</li>
                <li><strong>{{ section.settings.step4_title | default: "Approved" }}</strong> - {{ section.settings.step4_desc | default: "Get instant approval" }}</li>
                <li><strong>{{ section.settings.step5_title | default: "Take Home" }}</strong> - {{ section.settings.step5_desc | default: "Your bike is ready to ride!" }}</li>
              </ol>
            </div>
          </div>
        </div>

        <!-- Why Choose HeyLight -->
        <div class="why-heylight mb-5">
          <h3 class="why-title">{{ section.settings.why_title | default: "Why Choose HeyLight?" }}</h3>
          <div class="row">
            <div class="col-md-6">
              <ul class="why-features">
                <li><strong>{{ section.settings.why_feature1_title | default: "Swiss Company" }}</strong> - {{ section.settings.why_feature1_desc | default: "Local payment solution you can trust" }}</li>
                <li><strong>{{ section.settings.why_feature2_title | default: "Transparent" }}</strong> - {{ section.settings.why_feature2_desc | default: "No hidden fees or surprises" }}</li>
                <li><strong>{{ section.settings.why_feature3_title | default: "Flexible" }}</strong> - {{ section.settings.why_feature3_desc | default: "Pay early without penalties" }}</li>
              </ul>
            </div>
            <div class="col-md-6">
              <ul class="why-features">
                <li><strong>{{ section.settings.why_feature4_title | default: "Secure" }}</strong> - {{ section.settings.why_feature4_desc | default: "Bank-level security and encryption" }}</li>
                <li><strong>{{ section.settings.why_feature5_title | default: "Fast" }}</strong> - {{ section.settings.why_feature5_desc | default: "Approval in minutes, not days" }}</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Security Info -->
        <div class="security-info mb-5">
          <h3 class="security-title">{{ section.settings.security_title | default: "Secure & Trusted" }}</h3>
          <p class="security-text">{{ section.settings.security_text | default: "HeyLight is a regulated Swiss financial services provider with bank-level security. Your personal and financial information is protected with the highest security standards." }}</p>
        </div>

        <!-- Contact Section -->
        <div class="contact-section">
          <h3 class="contact-title">{{ section.settings.contact_title | default: "Questions About Financing?" }}</h3>
          <p class="contact-intro">{{ section.settings.contact_intro | default: "Our team is here to help you find the perfect financing solution for your e-bike purchase." }}</p>
          
          <h4 class="contact-options-title">{{ section.settings.contact_options_title | default: "Contact Options:" }}</h4>
          <ul class="contact-options">
            <li>{{ section.settings.contact_option1 | default: "Visit any of our 4 store locations" }}</li>
            <li>{{ section.settings.contact_option2 | default: "Call us during business hours" }}</li>
            <li>{{ section.settings.contact_option3 | default: "Chat with us online" }}</li>
          </ul>
          
          <div class="text-center mt-4">
            <a href="{{ section.settings.store_locations_url | default: '/pages/contact' }}" class="btn btn-primary">{{ section.settings.store_locations_text | default: "View Store Locations" }}</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

