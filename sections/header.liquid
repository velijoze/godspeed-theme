{
  "name": "Header",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "Header Homepage"
    },
    {
      "type": "select",
      "id": "select_hds",
      "label": "Select Style",
      "options": [
        {
          "value": "header_v1",
          "label": "Header v1"
        },
        {
          "value": "header_v2",
          "label": "Header v2"
        },
        {
