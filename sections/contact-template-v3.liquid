              <script>
                function initMap() {
                  var defaultCenter = { lat: 46.8182, lng: 8.2275 };
                  var map = new google.maps.Map(document.getElementById('map'), {
                    zoom: 7,
                    center: defaultCenter,
                    mapTypeControl: false,
                    streetViewControl: false
                  });
                  var markers = [];
                  {% if section.settings.address1_latitude and section.settings.address1_longitude %}
                  markers.push({ position: { lat: {{ section.settings.address1_latitude }}, lng: {{ section.settings.address1_longitude }} }, title: {{ section.settings.address1_title | json }} });
                  {% endif %}
                  {% if section.settings.address2_latitude and section.settings.address2_longitude %}
                  markers.push({ position: { lat: {{ section.settings.address2_latitude }}, lng: {{ section.settings.address2_longitude }} }, title: {{ section.settings.address2_title | json }} });
                  {% endif %}
                  {% if section.settings.address3_latitude and section.settings.address3_longitude %}
                  markers.push({ position: { lat: {{ section.settings.address3_latitude }}, lng: {{ section.settings.address3_longitude }} }, title: {{ section.settings.address3_title | json }} });
                  {% endif %}
                  {% if section.settings.address4_latitude and section.settings.address4_longitude %}
                  markers.push({ position: { lat: {{ section.settings.address4_latitude }}, lng: {{ section.settings.address4_longitude }} }, title: {{ section.settings.address4_title | json }} });
                  {% endif %}
                  {% if settings.gmap_latitude and settings.gmap_longitude %}
                  if (markers.length === 0) {
                    markers.push({ position: { lat: {{ settings.gmap_latitude }}, lng: {{ settings.gmap_longitude }} }, title: {{ shop.name | json }} });
                  }
                  {% endif %}
                  var bounds = new google.maps.LatLngBounds();
                  markers.forEach(function(m){ new google.maps.Marker({ position: m.position, map: map, title: m.title }); bounds.extend(m.position); });
                  if (markers.length > 1) { map.fitBounds(bounds); }
                  else if (markers.length === 1) { map.setCenter(markers[0].position); map.setZoom(12); }
                }
              </script>
              <script src="https://maps.googleapis.com/maps/api/js?key={{settings.gmap_key}}&callback=initMap" async defer></script>
