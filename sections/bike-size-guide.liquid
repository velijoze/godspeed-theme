{% stylesheet %}
.size-guide-header {
  background: #f8f9fa;
  border-bottom: 1px solid #e9ecef;
}

.size-guide-title-section {
  padding: 50px 0 40px;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-bottom: 1px solid #e9ecef;
}

.size-guide-title-wrapper {
  max-width: 900px;
  margin: 0 auto;
  text-align: center;
}

.size-guide-title {
  font-size: 2.8rem;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 20px;
  line-height: 1.2;
}

.size-guide-subtitle {
  font-size: 1.2rem;
  color: #6c757d;
  line-height: 1.4;
  max-width: 700px;
  margin: 0 auto;
}

.size-guide-content {
  padding: 60px 0;
  background: #ffffff;
}

.size-guide-wrapper {
  max-width: 1100px;
  margin: 0 auto;
}

.size-guide-section {
  margin-bottom: 50px;
  background: #f8f9fa;
  padding: 35px;
  border-radius: 12px;
  border-left: 4px solid #007bff;
}

.section-title {
  font-size: 1.8rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 25px;
  line-height: 1.3;
}

.bike-type-section {
  margin-bottom: 35px;
}

.bike-type-section:last-child {
  margin-bottom: 0;
}

.bike-type-section h3 {
  font-size: 1.3rem;
  font-weight: 600;
  color: #34495e;
  margin-bottom: 15px;
  line-height: 1.3;
}

.size-table-wrapper {
  overflow-x: auto;
  margin: 20px 0;
}

.size-table {
  width: 100%;
  border-collapse: collapse;
  background: #ffffff;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.size-table th,
.size-table td {
  padding: 15px;
  text-align: center;
  border-bottom: 1px solid #e9ecef;
}

.size-table th {
  background: #34495e;
  color: #ffffff;
  font-weight: 600;
  font-size: 0.95rem;
}

.size-table td {
  font-size: 0.9rem;
  color: #495057;
}

.size-table tbody tr:hover {
  background: #f8f9fa;
}

.measure-steps {
  display: grid;
  gap: 25px;
}

.measure-step h3 {
  font-size: 1.2rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 12px;
  line-height: 1.3;
}

.measure-step ul {
  margin-bottom: 0;
  padding-left: 20px;
}

.measure-step li {
  margin-bottom: 8px;
  line-height: 1.4;
  color: #495057;
}

.frame-types {
  display: grid;
  gap: 25px;
}

.frame-type {
  background: #ffffff;
  padding: 25px;
  border-radius: 8px;
  border: 1px solid #e9ecef;
}

.frame-type h3 {
  font-size: 1.2rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 15px;
  line-height: 1.3;
}

.frame-type ul {
  margin-bottom: 0;
  padding-left: 20px;
}

.frame-type li {
  margin-bottom: 8px;
  line-height: 1.4;
  color: #495057;
}

.considerations-grid {
  display: grid;
  gap: 25px;
}

.consideration-item {
  background: #ffffff;
  padding: 25px;
  border-radius: 8px;
  border: 1px solid #e9ecef;
}

.consideration-item h3 {
  font-size: 1.2rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 15px;
  line-height: 1.3;
}

.consideration-item ul {
  margin-bottom: 0;
  padding-left: 20px;
}

.consideration-item li {
  margin-bottom: 8px;
  line-height: 1.4;
  color: #495057;
}

.womens-features,
.fitting-features,
.help-features {
  display: grid;
  gap: 8px;
  padding-left: 20px;
  margin-bottom: 0;
}

.womens-features li,
.fitting-features li,
.help-features li {
  line-height: 1.4;
  color: #495057;
}

.mistakes-list {
  padding-left: 20px;
  margin-bottom: 0;
}

.mistakes-list li {
  margin-bottom: 12px;
  line-height: 1.4;
  color: #495057;
}

.highlight-section {
  border-left-color: #ff4040;
  background: linear-gradient(135deg, #fff5f2 0%, #f8f9fa 100%);
}

.highlight-section .section-title {
  color: #d63031;
}

.help-cta {
  font-weight: 600;
  color: #2c3e50;
  margin: 20px 0;
  font-size: 1.1rem;
}

.cta-buttons {
  display: flex;
  gap: 15px;
  margin-top: 25px;
  flex-wrap: wrap;
}

.cta-btn {
  display: inline-block;
  padding: 12px 24px;
  border-radius: 6px;
  text-decoration: none;
  font-weight: 600;
  font-size: 0.95rem;
  transition: all 0.3s ease;
  text-align: center;
}

.primary-btn {
  background: #007bff;
  color: #ffffff;
  border: 2px solid #007bff;
}

.primary-btn:hover {
  background: #0056b3;
  border-color: #0056b3;
  color: #ffffff;
}

.secondary-btn {
  background: transparent;
  color: #007bff;
  border: 2px solid #007bff;
}

.secondary-btn:hover {
  background: #007bff;
  color: #ffffff;
}

@media (min-width: 768px) {
  .frame-types {
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }
  
  .considerations-grid {
    grid-template-columns: 1fr 1fr;
  }
  
  .measure-steps {
    grid-template-columns: 1fr 1fr;
  }
}

@media (max-width: 767px) {
  .size-guide-title {
    font-size: 2.2rem;
  }
  
  .size-guide-subtitle {
    font-size: 1.1rem;
  }
  
  .size-guide-content {
    padding: 40px 0;
  }
  
  .size-guide-section {
    padding: 25px 20px;
  }
  
  .section-title {
    font-size: 1.5rem;
  }
  
  .size-table th,
  .size-table td {
    padding: 10px 8px;
    font-size: 0.85rem;
  }
  
  .cta-buttons {
    flex-direction: column;
  }
  
  .cta-btn {
    text-align: center;
  }
}
{% endstylesheet %}