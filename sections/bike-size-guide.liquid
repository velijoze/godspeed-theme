<div data-section-id="{{ section.id }}" data-section-type="bike-size-guide">
  <section class="size-guide-header">
    <div class="container">
      <div class="pt-40 pb-20">
        <div class="wrap-bread-crumb">
          {% include 'breadcrumb' %}
        </div>
      </div>
    </div>
  </section>

  <section class="size-guide-title-section">
    <div class="container">
      <div class="size-guide-title-wrapper">
        <div class="text-center">
          <h1 class="size-guide-title">{{ section.settings.page_title | default: "Bike Size Guide" }}</h1>
          <div class="size-guide-subtitle">{{ section.settings.page_subtitle | default: "Finding the right bike size is crucial for comfort, performance, and safety. Use this comprehensive guide to determine your ideal frame size." }}</div>
        </div>
      </div>
    </div>
  </section>

  <section class="size-guide-content">
    <div class="container">
      <div class="size-guide-wrapper">

        <!-- Quick Size Calculator -->
        <div class="size-guide-section calculator-section">
          <h2 class="section-title">{{ section.settings.calculator_title | default: "Quick Size Calculator" }}</h2>
          
          <!-- E-Bikes & City Bikes -->
          <div class="bike-type-section">
            <h3>{{ section.settings.ebike_title | default: "E-Bikes & City Bikes" }}</h3>
            <div class="size-table-wrapper">
              <table class="size-table">
                <thead>
                  <tr>
                    <th>Your Height</th>
                    <th>Frame Size</th>
                    <th>Frame Size (cm)</th>
                  </tr>
                </thead>
                <tbody>
                  <tr><td>150-160 cm</td><td>XS</td><td>45-48 cm</td></tr>
                  <tr><td>160-170 cm</td><td>S</td><td>48-52 cm</td></tr>
                  <tr><td>170-180 cm</td><td>M</td><td>52-56 cm</td></tr>
                  <tr><td>180-190 cm</td><td>L</td><td>56-60 cm</td></tr>
                  <tr><td>190-200 cm</td><td>XL</td><td>60-64 cm</td></tr>
                  <tr><td>200+ cm</td><td>XXL</td><td>64+ cm</td></tr>
                </tbody>
              </table>
            </div>
          </div>

          <!-- Mountain Bikes -->
          <div class="bike-type-section">
            <h3>{{ section.settings.mountain_title | default: "Mountain Bikes" }}</h3>
            <div class="size-table-wrapper">
              <table class="size-table">
                <thead>
                  <tr>
                    <th>Your Height</th>
                    <th>Frame Size</th>
                    <th>Frame Size (inches)</th>
                  </tr>
                </thead>
                <tbody>
                  <tr><td>150-160 cm</td><td>XS</td><td>13-14"</td></tr>
                  <tr><td>160-170 cm</td><td>S</td><td>15-16"</td></tr>
                  <tr><td>170-180 cm</td><td>M</td><td>17-18"</td></tr>
                  <tr><td>180-190 cm</td><td>L</td><td>19-20"</td></tr>
                  <tr><td>190-200 cm</td><td>XL</td><td>21-22"</td></tr>
                  <tr><td>200+ cm</td><td>XXL</td><td>23+"</td></tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>

        <!-- How to Measure -->
        <div class="size-guide-section measure-section">
          <h2 class="section-title">{{ section.settings.measure_title | default: "How to Measure Yourself" }}</h2>
          
          <div class="measure-steps">
            <div class="measure-step">
              <h3>Step 1: Measure Your Inseam</h3>
              <ul>
                <li>Stand barefoot against a wall</li>
                <li>Place a book between your legs, spine against your crotch</li>
                <li>Mark where the book meets the wall</li>
                <li>Measure from floor to mark</li>
              </ul>
            </div>
            
            <div class="measure-step">
              <h3>Step 2: Calculate Frame Size</h3>
              <ul>
                <li><strong>Road/City bikes:</strong> Inseam (cm) × 0.66</li>
                <li><strong>Mountain bikes:</strong> Inseam (cm) × 0.226</li>
                <li><strong>Trekking bikes:</strong> Inseam (cm) × 0.66</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Frame Styles -->
        <div class="size-guide-section frame-styles-section">
          <h2 class="section-title">{{ section.settings.frame_title | default: "Frame Styles" }}</h2>
          
          <div class="frame-types">
            <div class="frame-type">
              <h3>Diamond Frame (Traditional)</h3>
              <ul>
                <li>Standard frame design</li>
                <li>Best power transfer</li>
                <li>Sportier riding position</li>
                <li>Requires leg flexibility to mount</li>
              </ul>
            </div>
            
            <div class="frame-type">
              <h3>Step-Through Frame</h3>
              <ul>
                <li>Easy mounting and dismounting</li>
                <li>Ideal for city riding</li>
                <li>Perfect with skirts/dresses</li>
                <li>Slightly heavier</li>
              </ul>
            </div>
            
            <div class="frame-type">
              <h3>Mixte Frame</h3>
              <ul>
                <li>Compromise between diamond and step-through</li>
                <li>Moderate step-over height</li>
                <li>Good stability</li>
                <li>Versatile design</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Special Considerations -->
        <div class="size-guide-section considerations-section">
          <h2 class="section-title">{{ section.settings.considerations_title | default: "Special Considerations" }}</h2>
          
          <div class="considerations-grid">
            <div class="consideration-item">
              <h3>Between Sizes?</h3>
              <ul>
                <li><strong>Choose smaller:</strong> For agile handling and sporty riding</li>
                <li><strong>Choose larger:</strong> For stability and comfort</li>
                <li><strong>Test ride both:</strong> Personal preference matters</li>
              </ul>
            </div>
            
            <div class="consideration-item">
              <h3>E-Bike Specific</h3>
              <ul>
                <li>Step-through frames more popular due to weight</li>
                <li>Battery position affects balance</li>
                <li>Consider ease of mounting with added weight</li>
                <li>Motor assistance compensates for less optimal fit</li>
              </ul>
            </div>
          </div>
        </div>

        <!-- Women's Specific -->
        <div class="size-guide-section womens-section">
          <h2 class="section-title">{{ section.settings.womens_title | default: "Women's Specific Geometry" }}</h2>
          <p>Many women benefit from:</p>
          <ul class="womens-features">
            <li>Shorter top tubes</li>
            <li>Narrower handlebars</li>
            <li>Women-specific saddles</li>
            <li>Adjusted stem lengths</li>
          </ul>
        </div>

        <!-- Kids Sizing -->
        <div class="size-guide-section kids-section">
          <h2 class="section-title">{{ section.settings.kids_title | default: "Kids Bike Sizing" }}</h2>
          <div class="size-table-wrapper">
            <table class="size-table kids-table">
              <thead>
                <tr>
                  <th>Age</th>
                  <th>Height</th>
                  <th>Wheel Size</th>
                </tr>
              </thead>
              <tbody>
                <tr><td>2-4 years</td><td>85-100 cm</td><td>12"</td></tr>
                <tr><td>3-5 years</td><td>95-110 cm</td><td>14"</td></tr>
                <tr><td>4-6 years</td><td>100-120 cm</td><td>16"</td></tr>
                <tr><td>5-8 years</td><td>110-130 cm</td><td>18"</td></tr>
                <tr><td>7-10 years</td><td>120-140 cm</td><td>20"</td></tr>
                <tr><td>9-12 years</td><td>130-150 cm</td><td>24"</td></tr>
                <tr><td>11+ years</td><td>140+ cm</td><td>26" or adult</td></tr>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Professional Fitting -->
        <div class="size-guide-section fitting-section highlight-section">
          <h2 class="section-title">{{ section.settings.fitting_title | default: "Professional Bike Fitting" }}</h2>
          <p>For optimal comfort and performance, consider our professional fitting service:</p>
          <ul class="fitting-features">
            <li>Body measurements and flexibility assessment</li>
            <li>Saddle height and position optimization</li>
            <li>Handlebar reach and height adjustment</li>
            <li>Cleat positioning for clipless pedals</li>
            <li>Follow-up adjustments included</li>
          </ul>
        </div>

        <!-- Common Mistakes -->
        <div class="size-guide-section mistakes-section">
          <h2 class="section-title">{{ section.settings.mistakes_title | default: "Common Sizing Mistakes" }}</h2>
          <ul class="mistakes-list">
            <li><strong>Choosing by height alone</strong> - Inseam is more important</li>
            <li><strong>Ignoring reach</strong> - Top tube length matters</li>
            <li><strong>Not testing</strong> - Always test ride when possible</li>
            <li><strong>Copying friends</strong> - Everyone's body is different</li>
            <li><strong>Prioritizing looks</strong> - Comfort should come first</li>
          </ul>
        </div>

        <!-- Help Section -->
        <div class="size-guide-section help-section highlight-section">
          <h2 class="section-title">{{ section.settings.help_title | default: "Need Help?" }}</h2>
          <p>Our expert staff provides free sizing consultations:</p>
          <ul class="help-features">
            <li>In-store measurements</li>
            <li>Test rides in multiple sizes</li>
            <li>Professional recommendations</li>
            <li>Post-purchase adjustments</li>
          </ul>
          <p class="help-cta">Visit any of our locations for personalized sizing assistance!</p>
          
          {% if section.settings.show_cta_buttons %}
          <div class="cta-buttons">
            {% if section.settings.test_ride_url != blank %}
            <a href="{{ section.settings.test_ride_url }}" class="cta-btn primary-btn">Book a Test Ride</a>
            {% endif %}
            {% if section.settings.stores_url != blank %}
            <a href="{{ section.settings.stores_url }}" class="cta-btn secondary-btn">Visit Our Stores</a>
            {% endif %}
            {% if section.settings.contact_url != blank %}
            <a href="{{ section.settings.contact_url }}" class="cta-btn secondary-btn">Contact Us</a>
            {% endif %}
          </div>
          {% endif %}
        </div>

      </div>
    </div>
  </section>
</div>

