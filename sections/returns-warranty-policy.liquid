  margin-bottom: 8px;
  line-height: 1.4;
  color: #495057;
}

.contact-section {
  border-left-color: #17a2b8;
  background: linear-gradient(135deg, #f0fdff 0%, #f8f9fa 100%);
}

.contact-section .section-title {
  color: #0c5460;
}

.contact-grid {
  display: grid;
  gap: 25px;
}

.contact-method {
  background: #ffffff;
  padding: 25px;
  border-radius: 8px;
  border: 1px solid #e9ecef;
}

.contact-method h3 {
  font-size: 1.2rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 15px;
  line-height: 1.3;
}

.contact-method p {
  margin-bottom: 8px;
  line-height: 1.4;
  color: #495057;
}

.contact-method p:last-child {
  margin-bottom: 0;
}

@media (min-width: 768px) {
  .policy-grid {
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  }
  
  .steps-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .warranty-types {
    grid-template-columns: 1fr 1fr;
  }
  
  .coverage-grid {
    grid-template-columns: 1fr 1fr;
  }
  
  .contact-grid {
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  }
}

@media (max-width: 767px) {
  .policy-title {
    font-size: 2.2rem;
  }
  
  .policy-subtitle {
    font-size: 1.1rem;
  }
  
  .policy-content-section {
    padding: 40px 0;
  }
  
  .policy-block {
    padding: 25px 20px;
  }
  
  .section-title {
    font-size: 1.6rem;
  }
  
  .step {
    flex-direction: column;
    text-align: center;
  }
  
  .step-number {
    margin: 0 auto;
  }
}
