<div data-section-id="{{ section.id }}" data-section-type="returns-warranty-policy" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <section class="policy-header">
    <div class="container">
      <div class="pt-40 pb-20">
        <div class="wrap-bread-crumb">
          {% include 'breadcrumb' %}
        </div>
      </div>
    </div>
  </section>

  <section class="policy-title-section">
    <div class="container">
      <div class="policy-title-wrapper">
        <div class="text-center">
          <h1 class="policy-title">{{ section.settings.page_title | default: "Returns & Warranty Policy" }}</h1>
          <div class="policy-subtitle">{{ section.settings.page_subtitle | default: "Your satisfaction is our priority. Learn about our comprehensive returns and warranty coverage for all bicycles and e-bikes." }}</div>
        </div>
      </div>
    </div>
  </section>

  <section class="policy-content-section">
    <div class="container">
      <div class="policy-content-wrapper">

        <!-- Return Policy -->
        {% if section.settings.show_returns %}
        <div class="policy-block returns-highlight">
          <h2 class="section-title">{{ section.settings.returns_title | default: "Return Policy" }}</h2>
          
          <div class="policy-grid">
            <div class="policy-item">
              <h3>Return Window</h3>
              <p><strong>30 days</strong> from delivery date for unused items in original condition</p>
              <p><strong>14 days</strong> for used items with minimal wear</p>
            </div>
            
            <div class="policy-item">
              <h3>What Can Be Returned</h3>
              <ul>
                <li>Bicycles and e-bikes in original condition</li>
                <li>Accessories and components</li>
                <li>Helmets and safety gear (unused only)</li>
                <li>Clothing and shoes (with tags attached)</li>
              </ul>
            </div>
            
            <div class="policy-item">
              <h3>Return Conditions</h3>
              <ul>
                <li>Original packaging and documentation</li>
                <li>No excessive wear or damage</li>
                <li>All accessories and manuals included</li>
                <li>Return authorization required</li>
              </ul>
            </div>
          </div>

          <div class="process-steps">
            <h3>Return Process</h3>
            <div class="steps-grid">
              <div class="step">
                <div class="step-number">1</div>
                <div class="step-content">
                  <h4>Contact Us</h4>
                  <p>Email returns@godspeed.ch with order number and reason</p>
                </div>
              </div>
              <div class="step">
                <div class="step-number">2</div>
                <div class="step-content">
                  <h4>Get Authorization</h4>
                  <p>Receive return authorization and shipping label</p>
                </div>
              </div>
              <div class="step">
                <div class="step-number">3</div>
                <div class="step-content">
                  <h4>Pack & Ship</h4>
                  <p>Securely package item and ship using provided label</p>
                </div>
              </div>
              <div class="step">
                <div class="step-number">4</div>
                <div class="step-content">
                  <h4>Get Refund</h4>
                  <p>Receive refund within 5-7 business days</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        {% endif %}

        <!-- Warranty Coverage -->
        {% if section.settings.show_warranty %}
        <div class="policy-block warranty-highlight">
          <h2 class="section-title">{{ section.settings.warranty_title | default: "Warranty Coverage" }}</h2>
          
          <div class="warranty-types">
            <div class="warranty-type">
              <h3>E-Bike Warranty</h3>
              <div class="warranty-details">
                <div class="warranty-item">
                  <strong>Frame:</strong> 5 years against manufacturing defects
                </div>
                <div class="warranty-item">
                  <strong>Motor:</strong> 2 years full coverage
                </div>
                <div class="warranty-item">
                  <strong>Battery:</strong> 2 years (minimum 70% capacity)
                </div>
                <div class="warranty-item">
                  <strong>Components:</strong> 1-2 years depending on manufacturer
                </div>
              </div>
            </div>
            
            <div class="warranty-type">
              <h3>Bicycle Warranty</h3>
              <div class="warranty-details">
                <div class="warranty-item">
                  <strong>Frame:</strong> Lifetime against manufacturing defects
                </div>
                <div class="warranty-item">
                  <strong>Fork:</strong> 2-3 years depending on type
                </div>
                <div class="warranty-item">
                  <strong>Components:</strong> 1-2 years manufacturer warranty
                </div>
                <div class="warranty-item">
                  <strong>Wheels:</strong> 1 year against defects
                </div>
              </div>
            </div>
          </div>

          <div class="warranty-coverage">
            <h3>What's Covered</h3>
            <div class="coverage-grid">
              <div class="coverage-item covered">
                <h4>✓ Covered</h4>
                <ul>
                  <li>Manufacturing defects</li>
                  <li>Material failures</li>
                  <li>Motor malfunctions</li>
                  <li>Battery capacity loss below 70%</li>
                  <li>Frame cracks from normal use</li>
                </ul>
              </div>
              <div class="coverage-item not-covered">
                <h4>✗ Not Covered</h4>
                <ul>
                  <li>Crash or impact damage</li>
                  <li>Normal wear and tear</li>
                  <li>Improper maintenance</li>
                  <li>Modifications or upgrades</li>
                  <li>Water damage from misuse</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        {% endif %}

        <!-- Warranty Claims -->
        {% if section.settings.show_claims %}
        <div class="policy-block">
          <h2 class="section-title">{{ section.settings.claims_title | default: "Making a Warranty Claim" }}</h2>
          
          <div class="claims-process">
            <h3>Required Documentation</h3>
            <ul class="documentation-list">
              <li>Original proof of purchase</li>
              <li>Product serial number</li>
              <li>Photos of the issue/defect</li>
              <li>Description of the problem</li>
            </ul>

            <h3>Claim Process</h3>
            <div class="claim-steps">
              <div class="claim-step">
                <h4>1. Initial Assessment</h4>
                <p>Contact our service team with documentation and photos</p>
              </div>
              <div class="claim-step">
                <h4>2. Evaluation</h4>
                <p>Bring item to store for professional inspection</p>
              </div>
              <div class="claim-step">
                <h4>3. Resolution</h4>
                <p>Repair, replace, or refund based on warranty terms</p>
              </div>
            </div>
          </div>
        </div>
        {% endif %}

        <!-- Exclusions -->
        {% if section.settings.show_exclusions %}
        <div class="policy-block exclusions-section">
          <h2 class="section-title">{{ section.settings.exclusions_title | default: "Important Exclusions" }}</h2>
          
          <div class="exclusions-content">
            <h3>Items That Cannot Be Returned</h3>
            <ul class="exclusions-list">
              <li>Custom or personalized bicycles</li>
              <li>Used helmets or safety equipment</li>
              <li>Consumable items (tubes, brake pads, etc.)</li>
              <li>Items damaged by customer</li>
              <li>Items beyond 30-day return window</li>
            </ul>

            <h3>Warranty Void Conditions</h3>
            <ul class="void-conditions">
              <li>Unauthorized repairs or modifications</li>
              <li>Damage from accidents or misuse</li>
              <li>Failure to follow maintenance guidelines</li>
              <li>Use beyond recommended specifications</li>
            </ul>
          </div>
        </div>
        {% endif %}

        <!-- Contact Information -->
        {% if section.settings.show_contact %}
        <div class="policy-block contact-section">
          <h2 class="section-title">{{ section.settings.contact_title | default: "Contact Support" }}</h2>
          
          <div class="contact-grid">
            <div class="contact-method">
              <h3>Returns & Exchanges</h3>
              <p><strong>Email:</strong> {{ section.settings.returns_email | default: "returns@godspeed.ch" }}</p>
              <p><strong>Phone:</strong> {{ section.settings.returns_phone | default: "+41 91 224 53 43" }}</p>
            </div>
            <div class="contact-method">
              <h3>Warranty Claims</h3>
              <p><strong>Email:</strong> {{ section.settings.warranty_email | default: "warranty@godspeed.ch" }}</p>
              <p><strong>Phone:</strong> {{ section.settings.warranty_phone | default: "+41 91 224 53 43" }}</p>
            </div>
            <div class="contact-method">
              <h3>In-Store Support</h3>
              <p>Visit any of our locations for immediate assistance</p>
              <p><strong>Hours:</strong> Monday-Friday 9:00-18:00, Saturday 9:00-17:00</p>
            </div>
          </div>
        </div>
        {% endif %}

      </div>
    </div>
  </section>
</div>

