{% stylesheet %}
.policy-header {
  background: #f8f9fa;
  border-bottom: 1px solid #e9ecef;
}

.policy-title-section {
  padding: 50px 0 40px;
  background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  border-bottom: 1px solid #e9ecef;
}

.policy-title-wrapper {
  max-width: 900px;
  margin: 0 auto;
  text-align: center;
}

.policy-title {
  font-size: 2.8rem;
  font-weight: 700;
  color: #2c3e50;
  margin-bottom: 20px;
  line-height: 1.2;
}

.policy-subtitle {
  font-size: 1.2rem;
  color: #6c757d;
  line-height: 1.4;
  max-width: 700px;
  margin: 0 auto;
}

.policy-content-section {
  padding: 60px 0;
  background: #ffffff;
}

.policy-content-wrapper {
  max-width: 1100px;
  margin: 0 auto;
}

.policy-block {
  margin-bottom: 50px;
  background: #f8f9fa;
  padding: 40px;
  border-radius: 12px;
  border-left: 4px solid #ff4040;
}

.section-title {
  font-size: 2rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 30px;
  line-height: 1.3;
}

.policy-grid {
  display: grid;
  gap: 25px;
  margin-bottom: 35px;
}

.policy-item {
  background: #ffffff;
  padding: 25px;
  border-radius: 8px;
  border: 1px solid #e9ecef;
}

.policy-item h3 {
  font-size: 1.3rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 15px;
  line-height: 1.3;
}

.policy-item p {
  margin-bottom: 10px;
  line-height: 1.5;
  color: #495057;
}

.policy-item ul {
  margin-bottom: 0;
  padding-left: 20px;
}

.policy-item li {
  margin-bottom: 6px;
  line-height: 1.4;
  color: #495057;
}

.process-steps {
  margin-top: 35px;
}

.process-steps h3 {
  font-size: 1.4rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 20px;
  line-height: 1.3;
}

.steps-grid {
  display: grid;
  gap: 20px;
}

.step {
  display: flex;
  align-items: flex-start;
  gap: 15px;
  background: #ffffff;
  padding: 20px;
  border-radius: 8px;
  border: 1px solid #e9ecef;
}

.step-number {
  background: #ff4040;
  color: #ffffff;
  width: 35px;
  height: 35px;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  font-size: 1rem;
  flex-shrink: 0;
}

.step-content h4 {
  font-size: 1.1rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 8px;
  line-height: 1.3;
}

.step-content p {
  margin-bottom: 0;
  line-height: 1.4;
  color: #495057;
  font-size: 0.95rem;
}

.returns-highlight {
  border-left-color: #28a745;
  background: linear-gradient(135deg, #f8fff9 0%, #f8f9fa 100%);
}

.returns-highlight .section-title {
  color: #155724;
}

.warranty-highlight {
  border-left-color: #ff4040;
  background: linear-gradient(135deg, #fff5f2 0%, #f8f9fa 100%);
}

.warranty-highlight .section-title {
  color: #d63031;
}

.warranty-types {
  display: grid;
  gap: 25px;
  margin-bottom: 35px;
}

.warranty-type {
  background: #ffffff;
  padding: 25px;
  border-radius: 8px;
  border: 1px solid #e9ecef;
}

.warranty-type h3 {
  font-size: 1.3rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 15px;
  line-height: 1.3;
}

.warranty-details {
  display: grid;
  gap: 10px;
}

.warranty-item {
  padding: 10px 0;
  border-bottom: 1px solid #f1f3f4;
  font-size: 0.95rem;
  line-height: 1.4;
  color: #495057;
}

.warranty-item:last-child {
  border-bottom: none;
}

.warranty-coverage {
  margin-top: 35px;
}

.warranty-coverage h3 {
  font-size: 1.4rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 20px;
  line-height: 1.3;
}

.coverage-grid {
  display: grid;
  gap: 25px;
}

.coverage-item {
  background: #ffffff;
  padding: 25px;
  border-radius: 8px;
  border: 1px solid #e9ecef;
}

.coverage-item.covered {
  border-left: 4px solid #ff4040;
}

.coverage-item.not-covered {
  border-left: 4px solid #dc3545;
}

.coverage-item h4 {
  font-size: 1.2rem;
  font-weight: 600;
  margin-bottom: 15px;
  line-height: 1.3;
}

.coverage-item.covered h4 {
  color: #ff4040;
}

.coverage-item.not-covered h4 {
  color: #dc3545;
}

.coverage-item ul {
  margin-bottom: 0;
  padding-left: 20px;
}

.coverage-item li {
  margin-bottom: 8px;
  line-height: 1.4;
  color: #495057;
}

.claims-process h3 {
  font-size: 1.3rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 15px;
  margin-top: 25px;
  line-height: 1.3;
}

.claims-process h3:first-child {
  margin-top: 0;
}

.documentation-list {
  background: #ffffff;
  padding: 20px;
  border-radius: 8px;
  border: 1px solid #e9ecef;
  margin-bottom: 25px;
  padding-left: 40px;
}

.documentation-list li {
  margin-bottom: 8px;
  line-height: 1.4;
  color: #495057;
}

.claim-steps {
  display: grid;
  gap: 20px;
}

.claim-step {
  background: #ffffff;
  padding: 20px;
  border-radius: 8px;
  border: 1px solid #e9ecef;
}

.claim-step h4 {
  font-size: 1.1rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 10px;
  line-height: 1.3;
}

.claim-step p {
  margin-bottom: 0;
  line-height: 1.4;
  color: #495057;
}

.exclusions-section {
  border-left-color: #6c5ce7;
  background: linear-gradient(135deg, #f8f7ff 0%, #f8f9fa 100%);
}

.exclusions-section .section-title {
  color: #5f3dc4;
}

.exclusions-content h3 {
  font-size: 1.3rem;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 15px;
  margin-top: 25px;
  line-height: 1.3;
}

.exclusions-content h3:first-child {
  margin-top: 0;
}

.exclusions-list,
.void-conditions {
  background: #ffffff;
  padding: 20px;
  border-radius: 8px;
  border: 1px solid #e9ecef;
  margin-bottom: 20px;
  padding-left: 40px;
}

.exclusions-list li,
