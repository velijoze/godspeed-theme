<div class="container container-v1">
  <div class="logo_wrap">
    <div class="slick_logolist">
      {% for block in section.blocks %}
        <div class="logo_item" {{ block.shopify_attributes }}>
          <div class="logo_box">
            <div class="image-block">
              <a href="{% if block.settings.url_image != blank%}{{block.settings.url_image}}{% else %}#{% endif %}">
                {% if block.settings.image != blank %}
                  <img src="{{ block.settings.image | img_url: '250x250' }}" alt="{{ block.settings.image.alt }}" class="image-block__image">
                {% else %}
                  <div class="image-block__image">
                    {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {% endif %}
              </a>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    {% if section.blocks.size == 0 %}
      
    {% endif %}
  </div>
</div>


<script>
  jQuery(document).ready(function($) {

    $('.slick_logolist').slick({
      dots: false,
      arrows: false,
      infinite: true,
      speed: 5000,
      slidesToShow: 6,
      slidesToScroll: 1,
      autoplay: true,
      {% if settings.enable_rtl_mode %}rtl: true,{% endif %}
      autoplaySpeed: 0,
      cssEase: 'linear',
      pauseOnHover: false,
      pauseOnFocus: false,
      responsive: [
        {
          breakpoint: 1200,
          settings: {
            slidesToShow: 5,
            slidesToScroll: 1
          }
        },
        {
          breakpoint: 992,
          settings: {
            slidesToShow: 4,
            slidesToScroll: 1
          }
        },
        {
          breakpoint: 768,
          settings: {
            slidesToShow: 3,
            slidesToScroll: 1
          }
        },
        {
          breakpoint: 576,
          settings: {
            slidesToShow: 2,
            slidesToScroll: 1
          }
        },
        {
          breakpoint: 400,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1
          }
        }
      ]
    });
  })
</script>
