{% comment %}
  Why GODSPEED Section
  Brand-specific content section with CTA
{% endcomment %}

<div class="why-godspeed-section">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-6 {% if section.settings.image_position == 'right' %}order-lg-2{% endif %}">
        {% if section.settings.image != blank %}
          <div class="godspeed-image">
            <img src="{{ section.settings.image | img_url: '800x600' }}" 
                 alt="{{ section.settings.title | escape }}"
                 class="img-fluid rounded">
          </div>
        {% endif %}
      </div>
      
      <div class="col-lg-6 {% if section.settings.image_position == 'right' %}order-lg-1{% endif %}">
        <div class="godspeed-content">
          {% if section.settings.title != blank %}
            <h2 class="godspeed-title">{{ section.settings.title }}</h2>
          {% endif %}
          
          {% if section.settings.content != blank %}
            <div class="godspeed-text">{{ section.settings.content }}</div>
          {% endif %}
          
          {% if section.settings.cta_text != blank and section.settings.cta_url != blank %}
            <div class="godspeed-cta">
              <a href="{{ section.settings.cta_url }}" class="btn btn-primary btn-godspeed">
                {{ section.settings.cta_text }}
              </a>
            </div>
          {% endif %}
          
          {% if section.settings.secondary_cta_text != blank and section.settings.secondary_cta_url != blank %}
            <div class="godspeed-secondary-cta">
              <a href="{{ section.settings.secondary_cta_url }}" class="btn btn-outline-primary btn-godspeed-secondary">
                {{ section.settings.secondary_cta_text }}
              </a>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
.why-godspeed-section {
  padding: {{ section.settings.padding_top | default: 100 }}px 0 {{ section.settings.padding_bottom | default: 100 }}px 0;
  background: {{ section.settings.bg_color | default: '#ffffff' }};
}

.godspeed-content {
  {% if section.settings.image != blank %}
    padding: 2rem 0;
  {% endif %}
}

.godspeed-title {
  font-size: 2.5rem;
  font-weight: 700;
  color: {{ section.settings.title_color | default: '#2c3e50' }};
  margin-bottom: 1.5rem;
  line-height: 1.3;
  {% if settings.font_type == 'google_fonts' %}
  font-family: {{ settings.fonts_name_1 }};
  {% endif %}
}

.godspeed-text {
  font-size: 1.1rem;
  color: {{ section.settings.content_color | default: '#6c757d' }};
  line-height: 1.7;
  margin-bottom: 2rem;
}

.godspeed-text p {
  margin-bottom: 1.2rem;
}

.godspeed-text p:last-child {
  margin-bottom: 0;
}

.godspeed-cta {
  margin-bottom: 1rem;
}

.btn-godspeed {
  padding: 1rem 2rem;
  font-size: 1.1rem;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  border-radius: 50px;
  transition: all 0.3s ease;
  border: 2px solid {{ section.settings.cta_color | default: settings.color_main2 }};
  background: {{ section.settings.cta_color | default: settings.color_main2 }};
  color: #ffffff;
  display: inline-block;
}

.btn-godspeed:hover {
  background: transparent;
  color: {{ section.settings.cta_color | default: settings.color_main2 }};
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(255, 64, 64, 0.3);
}

.btn-godspeed-secondary {
  padding: 1rem 2rem;
  font-size: 1rem;
  font-weight: 500;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  border-radius: 50px;
  transition: all 0.3s ease;
  border: 2px solid {{ section.settings.secondary_cta_color | default: '#6c757d' }};
  background: transparent;
  color: {{ section.settings.secondary_cta_color | default: '#6c757d' }};
  display: inline-block;
  margin-left: 1rem;
}

.btn-godspeed-secondary:hover {
  background: {{ section.settings.secondary_cta_color | default: '#6c757d' }};
  color: #ffffff;
  transform: translateY(-2px);
}

.godspeed-image {
  position: relative;
  overflow: hidden;
  border-radius: 16px;
}

.godspeed-image::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, {{ section.settings.overlay_color | default: settings.color_main2 }}20, transparent);
  z-index: 1;
  border-radius: 16px;
}

.godspeed-image img {
  border-radius: 16px;
  transition: transform 0.3s ease;
}

.godspeed-image:hover img {
  transform: scale(1.05);
}

@media (max-width: 992px) {
  .godspeed-title {
    font-size: 2rem;
  }
  
  .godspeed-content {
    margin-top: 2rem;
    text-align: center;
  }
  
  .btn-godspeed-secondary {
    margin-left: 0;
    margin-top: 1rem;
    display: block;
    width: 100%;
    max-width: 300px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .btn-godspeed {
    display: block;
    width: 100%;
    max-width: 300px;
    margin-left: auto;
    margin-right: auto;
  }
}

@media (max-width: 768px) {
  .why-godspeed-section {
    padding: 60px 0;
  }
  
  .godspeed-title {
    font-size: 1.8rem;
  }
  
  .godspeed-text {
    font-size: 1rem;
  }
  
  .btn-godspeed,
  .btn-godspeed-secondary {
    padding: 0.8rem 1.5rem;
    font-size: 1rem;
  }
}
</style>

