    },
    {
      "type": "url",
      "id": "secondary_cta_url",
      "label": "Secondary Button URL",
      "default": "/collections/e-bikes"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Title Color",
      "default": "#2c3e50"
    },
    {
      "type": "color",
      "id": "content_color",
      "label": "Content Color",
      "default": "#6c757d"
    },
    {
      "type": "color",
      "id": "cta_color",
      "label": "Primary Button Color",
      "default": "#ff4040"
    },
    {
      "type": "color",
      "id": "secondary_cta_color",
      "label": "Secondary Button Color",
      "default": "#6c757d"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Image Overlay Color",
      "default": "#ff4040"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding",
      "min": 0,
      "max": 150,
      "step": 10,
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding",
      "min": 0,
      "max": 150,
      "step": 10,
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "Why GODSPEED"
    }
  ]
}
{% endschema %}