<div data-section-id="{{ section.id }}" data-section-type="privacy-policy" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <section class="privacy-header">
    <div class="container">
      <div class="pt-40 pb-20">
        <div class="wrap-bread-crumb">
          {% include 'breadcrumb' %}
        </div>
      </div>
    </div>
  </section>

  <section class="privacy-title-section">
    <div class="container">
      <div class="privacy-title-wrapper">
        <div class="text-center">
          <h1 class="privacy-title">{{ section.settings.page_title | default: "Privacy Policy" }}</h1>
          <div class="privacy-subtitle">{{ section.settings.page_subtitle | default: "We respect your privacy and are committed to protecting your personal data. Learn how we collect, use, and safeguard your information." }}</div>
          <div class="last-updated">Last updated: {{ section.settings.last_updated | default: "December 2024" }}</div>
        </div>
      </div>
    </div>
  </section>

  <section class="privacy-content-section">
    <div class="container">
      <div class="privacy-content-wrapper">

        <!-- Data Collection -->
        {% if section.settings.show_collection %}
        <div class="privacy-block collection-highlight">
          <h2 class="section-title">{{ section.settings.collection_title | default: "Information We Collect" }}</h2>
          
          <div class="data-types">
            <div class="data-type">
              <h3>Personal Information</h3>
              <ul>
                <li>Name, email address, and phone number</li>
                <li>Billing and shipping addresses</li>
                <li>Payment information (processed securely by payment providers)</li>
                <li>Account credentials and preferences</li>
              </ul>
            </div>
            
            <div class="data-type">
              <h3>Service Information</h3>
              <ul>
                <li>Bicycle and e-bike specifications</li>
                <li>Service history and maintenance records</li>
                <li>Workshop appointment details</li>
                <li>Warranty and purchase information</li>
              </ul>
            </div>
            
            <div class="data-type">
              <h3>Technical Information</h3>
              <ul>
                <li>IP address and browser information</li>
                <li>Device type and operating system</li>
                <li>Website usage and analytics data</li>
                <li>Cookies and similar technologies</li>
              </ul>
            </div>
          </div>

          <div class="collection-methods">
            <h3>How We Collect Information</h3>
            <div class="methods-grid">
              <div class="method-item">
                <h4>Direct Collection</h4>
                <p>When you create an account, make a purchase, or book services</p>
              </div>
              <div class="method-item">
                <h4>Automated Collection</h4>
                <p>Through website analytics, cookies, and technical logs</p>
              </div>
              <div class="method-item">
                <h4>Third Parties</h4>
                <p>From payment processors and delivery partners (with consent)</p>
              </div>
            </div>
          </div>
        </div>
        {% endif %}

        <!-- Data Usage -->
        {% if section.settings.show_usage %}
        <div class="privacy-block usage-highlight">
          <h2 class="section-title">{{ section.settings.usage_title | default: "How We Use Your Information" }}</h2>
          
          <div class="usage-purposes">
            <div class="purpose-item">
              <h3>Order Processing</h3>
              <ul>
                <li>Process and fulfill your orders</li>
                <li>Manage payments and billing</li>
                <li>Coordinate delivery and pickup</li>
                <li>Provide order updates and tracking</li>
              </ul>
            </div>
            
            <div class="purpose-item">
              <h3>Service Delivery</h3>
              <ul>
                <li>Schedule and manage workshop appointments</li>
                <li>Maintain service records and history</li>
                <li>Process warranty claims</li>
                <li>Provide customer support</li>
              </ul>
            </div>
            
            <div class="purpose-item">
              <h3>Communication</h3>
              <ul>
                <li>Send important service notifications</li>
                <li>Respond to inquiries and support requests</li>
                <li>Share product updates and safety information</li>
                <li>Marketing communications (with consent)</li>
              </ul>
            </div>
            
            <div class="purpose-item">
              <h3>Business Operations</h3>
              <ul>
                <li>Improve our products and services</li>
                <li>Analyze website performance</li>
                <li>Prevent fraud and ensure security</li>
                <li>Comply with legal obligations</li>
              </ul>
            </div>
          </div>
        </div>
        {% endif %}

        <!-- Data Sharing -->
        {% if section.settings.show_sharing %}
        <div class="privacy-block sharing-section">
          <h2 class="section-title">{{ section.settings.sharing_title | default: "Information Sharing" }}</h2>
          
          <div class="sharing-content">
            <div class="sharing-item">
              <h3>✓ When We Share Information</h3>
              <ul class="share-list">
                <li><strong>Service Providers:</strong> Delivery companies, payment processors, and technical support</li>
                <li><strong>Legal Requirements:</strong> When required by law or to protect our rights</li>
                <li><strong>Business Transfers:</strong> In case of merger, acquisition, or asset sale</li>
                <li><strong>Consent:</strong> With your explicit consent for specific purposes</li>
              </ul>
            </div>
            
            <div class="sharing-item">
              <h3>✗ When We Don't Share Information</h3>
              <ul class="no-share-list">
                <li>We never sell your personal information to third parties</li>
                <li>No sharing for marketing without your consent</li>
                <li>No sharing with competitors or unrelated businesses</li>
                <li>No sharing of payment details (handled by secure processors)</li>
              </ul>
            </div>
          </div>

          <div class="third-party-notice">
            <h3>Third-Party Services</h3>
            <p>We use trusted third-party services including:</p>
            <div class="third-parties">
              <span class="third-party-tag">Payment Processing (Stripe, PayPal)</span>
              <span class="third-party-tag">Shipping (Swiss Post, DPD)</span>
              <span class="third-party-tag">Analytics (Google Analytics)</span>
              <span class="third-party-tag">Email (Mailchimp)</span>
            </div>
          </div>
        </div>
        {% endif %}

        <!-- Data Security -->
        {% if section.settings.show_security %}
        <div class="privacy-block security-highlight">
          <h2 class="section-title">{{ section.settings.security_title | default: "Data Security" }}</h2>
          
          <div class="security-measures">
            <div class="security-item">
              <h3>Technical Safeguards</h3>
              <ul>
                <li>SSL encryption for all data transmission</li>
                <li>Secure servers with regular security updates</li>
                <li>Encrypted storage of sensitive information</li>
                <li>Regular security audits and monitoring</li>
              </ul>
            </div>
            
            <div class="security-item">
              <h3>Access Controls</h3>
              <ul>
                <li>Limited staff access on need-to-know basis</li>
                <li>Multi-factor authentication for admin accounts</li>
                <li>Regular access reviews and updates</li>
                <li>Secure disposal of old data and equipment</li>
              </ul>
            </div>
          </div>

          <div class="security-notice">
            <h3>Your Role in Security</h3>
            <p>Help us protect your information by:</p>
            <ul class="user-security">
              <li>Using strong, unique passwords</li>
              <li>Logging out of shared devices</li>
              <li>Reporting suspicious activity immediately</li>
              <li>Keeping your contact information updated</li>
            </ul>
          </div>
        </div>
        {% endif %}

        <!-- Your Rights -->
        {% if section.settings.show_rights %}
        <div class="privacy-block rights-highlight">
          <h2 class="section-title">{{ section.settings.rights_title | default: "Your Rights" }}</h2>
          
          <div class="rights-content">
            <h3>Under Swiss and EU Data Protection Laws, You Have the Right To:</h3>
            
            <div class="rights-grid">
              <div class="right-item">
                <h4>Access</h4>
                <p>Request a copy of the personal information we hold about you</p>
              </div>
              
              <div class="right-item">
                <h4>Correction</h4>
                <p>Request correction of inaccurate or incomplete information</p>
              </div>
              
              <div class="right-item">
                <h4>Deletion</h4>
                <p>Request deletion of your personal information (where legally permitted)</p>
              </div>
              
              <div class="right-item">
                <h4>Portability</h4>
                <p>Request transfer of your data to another service provider</p>
              </div>
              
              <div class="right-item">
                <h4>Restriction</h4>
                <p>Request limitation of processing in certain circumstances</p>
              </div>
              
              <div class="right-item">
                <h4>Objection</h4>
                <p>Object to processing based on legitimate interests or direct marketing</p>
              </div>
            </div>

            <div class="rights-exercise">
              <h3>Exercising Your Rights</h3>
              <p>To exercise any of these rights, contact us at <strong>{{ section.settings.privacy_email | default: "privacy@godspeed.ch" }}</strong></p>
              <p>We will respond to your request within 30 days and may require verification of your identity.</p>
            </div>
          </div>
        </div>
        {% endif %}

        <!-- Cookies & Tracking -->
        {% if section.settings.show_cookies %}
        <div class="privacy-block cookies-section">
          <h2 class="section-title">{{ section.settings.cookies_title | default: "Cookies & Tracking" }}</h2>
          
          <div class="cookies-content">
            <div class="cookie-type">
              <h3>Essential Cookies</h3>
              <p>Required for basic website functionality including shopping cart, login, and security features.</p>
            </div>
            
            <div class="cookie-type">
              <h3>Analytics Cookies</h3>
              <p>Help us understand website usage and improve user experience. You can opt-out through cookie settings.</p>
            </div>
            
            <div class="cookie-type">
              <h3>Marketing Cookies</h3>
              <p>Used for targeted advertising and measuring campaign effectiveness. Requires your consent.</p>
            </div>
          </div>

          <div class="cookie-management">
            <h3>Cookie Management</h3>
            <p>You can control cookies through:</p>
            <ul>
              <li>Browser settings and preferences</li>
              <li>Our cookie banner (when visiting the site)</li>
              <li>Third-party opt-out tools</li>
              <li>Contacting us directly</li>
            </ul>
          </div>
        </div>
        {% endif %}

        <!-- Data Retention -->
        {% if section.settings.show_retention %}
        <div class="privacy-block retention-section">
          <h2 class="section-title">{{ section.settings.retention_title | default: "Data Retention" }}</h2>
          
          <div class="retention-periods">
            <div class="retention-item">
              <h3>Account Information</h3>
              <p>Retained while your account is active plus 3 years after closure</p>
            </div>
            
            <div class="retention-item">
              <h3>Order History</h3>
              <p>Retained for 10 years for warranty and legal compliance purposes</p>
            </div>
            
            <div class="retention-item">
              <h3>Service Records</h3>
              <p>Retained for 7 years to support warranty claims and safety records</p>
            </div>
            
            <div class="retention-item">
              <h3>Marketing Data</h3>
              <p>Retained until you withdraw consent or 2 years of inactivity</p>
            </div>
          </div>

          <div class="retention-policy">
            <h3>Retention Policy</h3>
            <p>We regularly review and delete data that is no longer needed. Some information may be retained longer for legal, safety, or warranty purposes as required by Swiss law.</p>
          </div>
        </div>
        {% endif %}

        <!-- Contact & Updates -->
        {% if section.settings.show_contact %}
        <div class="privacy-block contact-section">
          <h2 class="section-title">{{ section.settings.contact_title | default: "Contact & Updates" }}</h2>
          
          <div class="contact-info">
            <div class="contact-method">
              <h3>Data Protection Officer</h3>
              <p><strong>Email:</strong> {{ section.settings.privacy_email | default: "privacy@godspeed.ch" }}</p>
              <p><strong>Address:</strong> GODSPEED SA, Via Pretorio 15, 6900 Lugano, Switzerland</p>
              <p><strong>Phone:</strong> {{ section.settings.privacy_phone | default: "+41 91 224 53 43" }}</p>
            </div>
            
            <div class="supervisory-authority">
              <h3>Supervisory Authority</h3>
              <p>If you have concerns about our data practices, you can contact:</p>
              <p><strong>Federal Data Protection and Information Commissioner (FDPIC)</strong></p>
              <p>Feldeggweg 1, CH-3003 Bern</p>
              <p>Website: www.edoeb.admin.ch</p>
            </div>
          </div>

          <div class="policy-updates">
            <h3>Policy Updates</h3>
            <p>We may update this privacy policy to reflect changes in our practices or legal requirements. We will notify you of significant changes via email or website notice.</p>
            <p><strong>Current version:</strong> {{ section.settings.version | default: "Version 2.1" }}</p>
          </div>
        </div>
        {% endif %}

      </div>
    </div>
  </section>
</div>

