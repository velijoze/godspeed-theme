<div data-section-id="{{ section.id }}" data-section-type="section-banner-v4" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v4 mt-all">
    <div class="container container-v2">
      <div class="banner-v4">
        <div class="banner-item">
          <div class="banner-info">
            <a href="{{section.settings.link_button}}" class="d-block box-img">
              {% if section.settings.banner_img != blank %}
              <img data-src="{{section.settings.banner_img | img_url: 'master'}}" class="lazyload img-fluid w-100" alt="_img">
              {% else %}
              <img data-src="//via.placeholder.com/720x720" class="lazyload img-fluid w-100" alt="_img">
              {% endif %}
            </a>
            <div class="banner-content">
              {% if section.settings.title_detail != blank %}
              <p class="title-detail" style="color: {{section.settings.color_title_detail}}">{{section.settings.title_detail}}</p>
              {% endif %}
              {% if section.settings.button_banner1 != blank %}
              <a href="{{section.settings.link_button}}" class="btn-banner-{{ section.id }}">{{section.settings.button_banner1}}</a>
              {% endif %}
            </div>
          </div>
        </div>
        <div class="banner-item banner-item-v2">
          <div class="sub-banner-item">
            <div class="banner-up">
              <a href="{{section.settings.link_button2}}" class="d-block box-img">
                {% if section.settings.banner_img2 != blank %}
                <img data-src="{{section.settings.banner_img2 | img_url: 'master'}}" class="lazyload img-fluid w-100" alt="_img">
                {% else %}
                <img data-src="//via.placeholder.com/360x420" class="lazyload img-fluid w-100" alt="_img">
                {% endif %}
              </a>
            </div>
            <div class="banner-down">
              <div class="content">
                {% if section.settings.banner_title2 != blank %}
                <h3 class="title-banner" style="color: {{section.settings.color_banner_title2}}">{{section.settings.banner_title2}}</h3>
                {% endif %}
                {% if section.settings.title_detail2 != blank %}
                <p class="title-detail2" style="color: {{section.settings.color_title_detail2}}">{{section.settings.title_detail2}}</p>
                {% endif %}
                {% if section.settings.button_banner2 != blank %}
                <a href="{{section.settings.link_button2}}" class="btn-banner-{{ section.id }}">{{section.settings.button_banner2}}</a>
                {% endif %}
              </div>
            </div>
          </div>
          <div class="sub-banner-item">
            <div class="banner-up">
              <a href="{{section.settings.link_button3}}" class="d-block box-img">
                {% if section.settings.banner_img3 != blank %}
                <img data-src="{{section.settings.banner_img3 | img_url: 'master'}}" class="lazyload img-fluid w-100" alt="_img">
                {% else %}
                <img data-src="//via.placeholder.com/360x420" class="lazyload img-fluid w-100" alt="_img">
                {% endif %}
              </a>
            </div>
            <div class="banner-down">
              <div class="content">
                {% if section.settings.banner_title3 != blank %}
                <h3 class="title-banner" style="color: {{section.settings.color_banner_title3}}">{{section.settings.banner_title3}}</h3>
                {% endif %}
                {% if section.settings.title_detail3 != blank %}
                <p class="title-detail2" style="color: {{section.settings.color_title_detail3}}">{{section.settings.title_detail3}}</p>
                {% endif %}
                {% if section.settings.button_banner3 != blank %}
                <a href="{{section.settings.link_button3}}" class="btn-banner-{{ section.id }}">{{section.settings.button_banner3}}</a>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .section-banner-v4 .banner-item .btn-banner-{{ section.id }} {
    color: {{section.settings.color_btn}};
    background: {{section.settings.bg_btn}};
  }
  .section-banner-v4 .banner-item .btn-banner-{{ section.id }}:hover {
    color: {{section.settings.color_btn_hover}};
    background: {{section.settings.bg_btn_hover}};
  }
</style>
