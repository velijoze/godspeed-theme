{%- comment -%} Removed legacy Google Fonts includes; use theme typography {%- endcomment -%}
{% for block in section.blocks %}
{% if block.type == "slideshow" %}
  
{% endif %}
{% endfor %}

<div data-section-id="{{ section.id }}" data-section-type="section-slideshow-v5" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="section-slideshow-v5">
    <div class="">
      <div class="slick-side-h5">       
        {% if section.blocks.size > 0 %}
        {% for block in section.blocks %}
        {% if block.type == "slideshow" %}
        <div class="item-slide">
          <img data-src="{% if block.settings.img_slider != blank %} {{block.settings.img_slider | img_url: 'master'}}{% else %}//via.placeholder.com/800x800{% endif %}" class="lazyload img-fluid w-100" alt="slideshow">
          <div class="box-content">
            <div class="content">
              {% if block.settings.title_slide != blank %}
              <h3 class="title-{{block.id}}">{{block.settings.title_slide}}</h3>
              {% endif %}
              <a class="btn-slide-{{block.id}}" href="{{block.settings.url_link_collection}}">{{block.settings.link_collection}}<i class="fa fa-angle-double-right" aria-hidden="true"></i></a>
            </div>
          </div>
        </div>
        {% endif %}
        {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</div>
<style>
  {% for block in section.blocks %}
  {% if block.type == 'slideshow' %}
  .section-slideshow-v5 .slick-side-h5 .item-slide .box-content .content .title-{{block.id}} { color: {{block.settings.color_title}}; font-family: var(--font-heading); }
  
  .section-slideshow-v5 .slick-side-h5 .item-slide .box-content .content .btn-slide-{{block.id}} { color: {{block.settings.color_btn}}; font-family: var(--font-body); }
  .section-slideshow-v5 .slick-side-h5 .item-slide .box-content .content .btn-slide-{{block.id}}:hover {
    color:  {{block.settings.color_btn_hover}};
  }
  
   @media(min-width:1900px){
     .section-slideshow-v5 .slick-side-h5 .item-slide .box-content .content .title-{{block.id}} {
       font-size:{{block.settings.font_size_title_top}}px;
     }

     .section-slideshow-v5 .slick-side-h5 .item-slide .box-content .content .btn-slide-{{block.id}} {
       font-size:{{block.settings.font_size_button}}px;
     }
  }
  {% endif %}
  {% endfor %}
</style>

{% schema %}
{
  "name": "SLIDESHOW V5",
  "class": "index-section",
  "settings": [
    {
      "type": "header",
      "content": "Section Space"
    },
    {
      "type": "text",
      "id": "margin_top",
      "label": "Margin Top",
      "info": "Defined in pixels. Do not add the 'px' unit."
    },
    {
      "type": "text",
      "id": "margin_bottom",
      "label": "Margin Bottom",
      "info": "Defined in pixels. Do not add the 'px' unit."
    }
  ],
  "blocks": [
    {
      "type": "slideshow",
      "name": "SlideShow",
      "settings": [
		{
          "type": "image_picker",
          "id": "img_slider",
          "label": "Image slideshow",
          "info": "800 x 800px recommended"
        },
        {
          "type": "header",
          "content": "Heading Slideshow"
        },
        {
          "type": "text",
          "id": "title_slide",
          "label": "Heading ",
          "default": "Basic Collection"
        },
		{		
           "type": "color",
           "id": "color_title",
           "label": "Color",
           "default": "#010101"
        },
		{
          "type": "range",
          "id": "font_size_title_top",
          "min": 25,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "Font Size",
          "default": 25
        },
        {
          "type": "text",
          "id": "link_collection",
          "label": "Link Collection",
          "default": "Go to Collection"
        },
		{		
           "type": "color",
           "id": "color_btn",
           "label": "Color Link",
           "default": "#7D7B7B"
        },
		{		
           "type": "color",
           "id": "color_btn_hover",
           "label": "Color Link Hover",
           "default": "#010101"
        },
		{
          "type": "range",
          "id": "font_size_button",
          "min": 14,
          "max": 50,
          "step": 1,
          "unit": "px",
          "label": "Font Size",
          "default": 14
        },
        {
          "type": "url",
          "id": "url_link_collection",
          "label": "URL Collection",
          "default": "/collections/all"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "SLIDESHOW V5",
      "category": "HOME",
	  "blocks": [
        {
          "type": "slideshow",
          "settings": {
            "title_slide": "Basic Collection",
			"link_collection": "Go to Collection"
          }
        },
		 {
          "type": "slideshow",
          "settings": {
            "title_slide": "Basic Collection",
			"link_collection": "Go to Collection"
          }
        },
