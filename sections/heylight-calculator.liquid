    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 14px;
    font-weight: bold;
    flex-shrink: 0;
  }
  
  .benefit-title {
    font-size: 16px;
    font-weight: 600;
    color: #333;
    margin: 0 0 0.25rem 0;
  }
  
  .benefit-desc {
