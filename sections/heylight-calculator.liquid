    border-bottom: none;
  }
  
  .requirements-list li:before {
    content: "•";
    color: {{ section.settings.color_title | default: '#333' }};
    font-weight: bold;
    margin-right: 0.5rem;
  }
  
  .results-section {
    background: #fff;
    padding: 2rem;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
  }
  
  .results-title-{{ section.id }} {
    color: {{ section.settings.color_title | default: '#333' }};
    font-size: 28px;
    font-weight: 700;
    margin: 0;
  }
  
