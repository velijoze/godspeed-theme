<script>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('heylight-calculator-form-{{ section.id }}');
  const calculateBtn = document.getElementById('calculate-btn-{{ section.id }}');
  const btnText = calculateBtn.querySelector('.btn-text');
  const btnLoading = calculateBtn.querySelector('.btn-loading');
  const resultsSection = document.getElementById('results-section-{{ section.id }}');
  
  form.addEventListener('submit', function(e) {
    e.preventDefault();
    
    // Show loading state
    btnText.style.display = 'none';
    btnLoading.style.display = 'inline';
    calculateBtn.disabled = true;
    
    // Get form data
    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());
    
    // Calculate payment options
    const results = calculateHeylightPayments(data);
    
    // Display results
    displayPaymentResults(results, '{{ section.id }}');
    
    // Reset button
    btnText.style.display = 'inline';
    btnLoading.style.display = 'none';
    calculateBtn.disabled = false;
    
    // Show results
    resultsSection.style.display = 'block';
    resultsSection.scrollIntoView({ behavior: 'smooth' });
  });
});

function calculateHeylightPayments(data) {
  const amount = parseFloat(data.purchase_amount);
  const paymentOption = data.payment_option;
  const residencyStatus = data.residency_status;
  const employmentStatus = data.employment_status;
  
  // Extract payment terms
  const terms = parseInt(paymentOption.split('_')[1]);
  
  // Heylight actual rates and terms based on your financing page
  let monthlyPayment, totalInterest, totalAmount, interestRate;
  
  if (paymentOption.includes('bnpl')) {
    // 0% Interest BNPL options (3, 12, 24 months)
    monthlyPayment = amount / terms;
    totalInterest = 0;
    totalAmount = amount;
    interestRate = 0;
  } else if (paymentOption.includes('financing')) {
    // Financing options using 10.95% reference rate for all terms
    interestRate = 10.95; // Reference rate from your 36-month example
    
    const monthlyRate = interestRate / 100 / 12;
    monthlyPayment = amount * (monthlyRate * Math.pow(1 + monthlyRate, terms)) / (Math.pow(1 + monthlyRate, terms) - 1);
    totalAmount = monthlyPayment * terms;
    totalInterest = totalAmount - amount;
  }
  
  // Determine approval likelihood based on Swiss requirements
  let approvalLikelihood = 'High';
  
  if (residencyStatus === 'other') {
    approvalLikelihood = 'Low';
  } else if (residencyStatus === 'eu_resident') {
    approvalLikelihood = 'Medium';
  }
  
  if (employmentStatus === 'unemployed') {
    approvalLikelihood = 'Low';
  } else if (employmentStatus === 'student' || employmentStatus === 'part_time') {
    if (approvalLikelihood === 'High') approvalLikelihood = 'Medium';
  }
  
  // For amounts over CHF 5000, slightly lower approval chance
  if (amount > 5000 && approvalLikelihood === 'High') {
    approvalLikelihood = 'Medium';
  }
  
  return {
    paymentOption,
    terms,
    monthlyPayment: monthlyPayment.toFixed(2),
    totalAmount: totalAmount.toFixed(2),
    totalInterest: totalInterest.toFixed(2),
    interestRate: interestRate.toFixed(2),
    approvalLikelihood,
    amount: amount.toFixed(2)
  };
}

function displayPaymentResults(result, sectionId) {
  const paymentOptionsDiv = document.getElementById(`payment-options-${sectionId}`);
  
  const optionNames = {
    bnpl_3: '0% Interest - 3 Payments',
    bnpl_12: '0% Interest - 12 Months',
    bnpl_24: '0% Interest - 24 Months',
    financing_12: 'Financing - 12 Months',
    financing_24: 'Financing - 24 Months',
    financing_36: 'Extended Financing - 36 Months'
  };
  
  const badgeColors = {
    'High': '#28a745',
    'Medium': '#ffc107',
    'Low': '#dc3545'
  };
  
  paymentOptionsDiv.innerHTML = `
    <div class="payment-option-card">
      <div class="option-header">
        <h4 class="option-title">${optionNames[result.paymentOption]}</h4>
        <div class="option-badge" style="background: ${badgeColors[result.approvalLikelihood]}">
          ${result.approvalLikelihood} Approval Chance
        </div>
      </div>
      
      <div class="payment-details">
        <div class="payment-detail">
          <div class="detail-label">Monthly Payment</div>
          <div class="detail-value">CHF ${result.monthlyPayment}</div>
        </div>
        <div class="payment-detail">
          <div class="detail-label">Interest Rate</div>
          <div class="detail-value">${result.interestRate}%</div>
        </div>
        <div class="payment-detail">
          <div class="detail-label">Total Interest</div>
          <div class="detail-value">CHF ${result.totalInterest}</div>
        </div>
        <div class="payment-detail">
          <div class="detail-label">Total Amount</div>
          <div class="detail-value">CHF ${result.totalAmount}</div>
        </div>
        <div class="payment-detail">
          <div class="detail-label">Term Length</div>
          <div class="detail-value">${result.terms} ${result.terms > 6 ? 'months' : 'payments'}</div>
        </div>
      </div>
    </div>
  `;
}

function resetCalculator(sectionId) {
  document.getElementById(`heylight-calculator-form-${sectionId}`).reset();
  document.getElementById(`results-section-${sectionId}`).style.display = 'none';
  window.scrollTo({ top: 0, behavior: 'smooth' });
}
</script>

