    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
  }
  
  .btn-loading {
    display: none;
  }
  
  .calculator-sidebar {
    background: #fff;
    padding: 1.5rem;
    border-radius: 12px;
    height: fit-content;
    position: sticky;
    top: 2rem;
  }
  
  .sidebar-title-{{ section.id }} {
    color: {{ section.settings.color_title | default: '#333' }};
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 1rem 0;
  }
  
