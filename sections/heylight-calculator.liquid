{% comment %}
  Heylight Payment Calculator Section
  Calculate BNPL and financing options using theme CSS classes
{% endcomment %}

<div data-section-id="{{ section.id }}" data-section-type="section-heylight-calculator" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-heylight-calculator mt-all">
    <div class="container container-v2">
      <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12 col-sm-12">
          <div class="calculator-header text-center mb-5">
            {% if section.settings.calculator_title != blank %}
              <h2 class="title title-{{ section.id }} mb-3">{{ section.settings.calculator_title }}</h2>
            {% endif %}
            
            {% if section.settings.calculator_subtitle != blank %}
              <p class="subtitle subtitle-{{ section.id }}">{{ section.settings.calculator_subtitle }}</p>
            {% endif %}
          </div>
          
          <div class="calculator-wrapper">
            <div class="row">
              <div class="col-lg-8 col-md-12 mb-4">
                <div class="calculator-form-wrapper">
                  <form class="heylight-calculator-form" id="heylight-calculator-form-{{ section.id }}">
                    <div class="form-section mb-4">
                      <h4 class="section-title section-title-{{ section.id }} mb-3">Purchase Information</h4>
                      
                      <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
                          <div class="form-group">
                            <label for="purchase-amount-{{ section.id }}" class="form-label">Purchase Amount (CHF) *</label>
                            <input type="number" id="purchase-amount-{{ section.id }}" name="purchase_amount" class="form-control" min="300" max="10000" step="0.01" placeholder="3000.00" required>
                          </div>
                        </div>
                        
                        <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
                          <div class="form-group">
                            <label for="payment-option-{{ section.id }}" class="form-label">Payment Option *</label>
                            <select id="payment-option-{{ section.id }}" name="payment_option" class="form-control" required>
                              <option value="">Select payment option</option>
                              <option value="bnpl_3">0% Interest - 3 payments</option>
                              <option value="bnpl_12">0% Interest - 12 months</option>
                              <option value="bnpl_24">0% Interest - 24 months</option>
                              <option value="financing_12">Financing - 12 months</option>
                              <option value="financing_24">Financing - 24 months</option>
                              <option value="financing_36">Extended Financing - 36 months</option>
                            </select>
                          </div>
                        </div>
                      </div>
                      
                      <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
                          <div class="form-group">
                            <label for="residency-status-{{ section.id }}" class="form-label">Residency Status</label>
                            <select id="residency-status-{{ section.id }}" name="residency_status" class="form-control">
                              <option value="">Select residency status</option>
                              <option value="swiss_citizen">Swiss Citizen</option>
                              <option value="swiss_resident">Swiss Resident</option>
                              <option value="eu_resident">EU Resident</option>
                              <option value="other">Other</option>
                            </select>
                          </div>
                        </div>
                        
                        <div class="col-lg-6 col-md-6 col-sm-12 mb-3">
                          <div class="form-group">
                            <label for="employment-status-{{ section.id }}" class="form-label">Employment Status</label>
                            <select id="employment-status-{{ section.id }}" name="employment_status" class="form-control">
                              <option value="">Select employment status</option>
                              <option value="employed">Full-time Employed</option>
                              <option value="part_time">Part-time Employed</option>
                              <option value="self_employed">Self-employed</option>
                              <option value="student">Student</option>
                              <option value="retired">Retired</option>
                              <option value="unemployed">Unemployed</option>
                            </select>
                          </div>
                        </div>
                      </div>
                    </div>
                    
                    <div class="form-actions text-center">
                      <button type="submit" class="btn btn-calculate-{{ section.id }}" id="calculate-btn-{{ section.id }}">
                        <span class="btn-text">Calculate Payment</span>
                        <span class="btn-loading" style="display: none;">
                          <i class="fa fa-spinner fa-spin"></i> Calculating...
                        </span>
                      </button>
                    </div>
                  </form>
                </div>
              </div>
              
              <div class="col-lg-4 col-md-12">
                <div class="calculator-sidebar">
                  <div class="sidebar-section mb-4">
                    <h4 class="sidebar-title sidebar-title-{{ section.id }} mb-3">Heylight Benefits</h4>
                    <div class="benefits-list">
                      <div class="benefit-item mb-3">
                        <div class="benefit-icon">✓</div>
                        <div class="benefit-text">
                          <h5 class="benefit-title">0% Interest Available</h5>
                          <p class="benefit-desc">Qualified purchases up to 24 months</p>
                        </div>
                      </div>
                      
                      <div class="benefit-item mb-3">
                        <div class="benefit-icon">✓</div>
                        <div class="benefit-text">
                          <h5 class="benefit-title">Instant Approval</h5>
                          <p class="benefit-desc">Under 5 minutes with smartphone verification</p>
                        </div>
                      </div>
                      
                      <div class="benefit-item mb-3">
                        <div class="benefit-icon">✓</div>
                        <div class="benefit-text">
                          <h5 class="benefit-title">Take Home Today</h5>
                          <p class="benefit-desc">No paperwork, ride immediately</p>
                        </div>
                      </div>
                      
                      <div class="benefit-item">
                        <div class="benefit-icon">✓</div>
                        <div class="benefit-text">
                          <h5 class="benefit-title">Swiss Trusted</h5>
                          <p class="benefit-desc">Regulated Swiss financial services provider</p>
                        </div>
                      </div>
                    </div>
                  </div>
                  
                  <div class="sidebar-section">
                    <h4 class="sidebar-title sidebar-title-{{ section.id }} mb-3">Requirements</h4>
                    <ul class="requirements-list">
                      <li>Swiss residency required</li>
                      <li>Must be 18+ years old</li>
                      <li>Valid Swiss credit/debit card</li>
                      <li>Smartphone for verification</li>
                      <li>Regular income source</li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="results-section mt-5" id="results-section-{{ section.id }}" style="display: none;">
              <div class="results-header text-center mb-4">
                <h3 class="results-title results-title-{{ section.id }}">Your Payment Options</h3>
              </div>
              
              <div class="payment-options" id="payment-options-{{ section.id }}">
                <!-- Payment options will be generated here -->
              </div>
              
              <div class="results-footer text-center mt-4">
                <p class="disclaimer">* These are estimated payments. Final terms and rates may vary based on credit approval. Subject to Heylight's terms and conditions.</p>
                <div class="action-buttons">
                  <button class="btn btn-reset-{{ section.id }}" onclick="resetCalculator('{{ section.id }}')">Calculate Again</button>
                  {% if section.settings.apply_url != blank %}
                    <a href="{{ section.settings.apply_url }}" class="btn btn-apply-{{ section.id }}" target="_blank">Apply Now</a>
                  {% endif %}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

