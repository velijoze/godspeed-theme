            <div class="content-banner style-5">
              <div class="banner-info">
                <h3 class="bigtitle"> <span>{{section.settings.title_banner5}}</span></h3>
                <a class="button" target="_self" href="{{section.settings.link_banner5}}"> <span>{{section.settings.button_banner5}}</span> </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
