                <div class="content-banner style-2">
                  <div class="banner-info">                    
                    <h3 class="bigtitle"> <span>{{section.settings.title_banner2}}</span></h3>
                    <a class="button" target="_self" href="{{section.settings.link_banner2}}"> <span>{{section.settings.button_banner2}}</span> </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row no-gutters">
            <div class="col-md-4">
              <div class="item-banner">
                <div class="img-banner">
                  <img data-src="{% if section.settings.img_banner3 != blank %} {{section.settings.img_banner3 | img_url : 'master'}} {% else %} //via.placeholder.com/475x475 {% endif %}" class="lazyload img-fluid w-100" alt="_img_banner">
                </div>
                <div class="content-banner style-3">
                  <div class="banner-info">
                    <h3 class="bigtitle"> <span>{{section.settings.title_banner3}}</span></h3>
                    <a class="button" target="_self" href="{{section.settings.link_banner3}}"> <span>{{section.settings.button_banner3}}</span> </a>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-8">
              <div class="item-banner">
                <div class="img-banner">
                  <img data-src="{% if section.settings.img_banner4 != blank %} {{section.settings.img_banner4 | img_url : 'master'}} {% else %} //via.placeholder.com/950x475 {% endif %}" class="lazyload img-fluid w-100" alt="_img_banner">
                </div>
                <div class="content-banner style-4">
                  <div class="banner-info">
                    {% if section.settings.subtitle_banner4 != blank %}
                    <h6 class="title"> {{section.settings.subtitle_banner4}}</h6>
                    {% endif %}
