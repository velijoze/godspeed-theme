                    <a class="button" target="_self" href="{{section.settings.link_banner4}}"> <span>{{section.settings.button_banner4}}</span> </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-3 banner-right">
          <div class="item-banner">
            <div class="img-banner">
              <img data-src="{% if section.settings.img_banner5 != blank %} {{section.settings.img_banner5 | img_url : 'master'}} {% else %} //via.placeholder.com/478x955 {% endif %}" class="lazyload img-fluid w-100" alt="_img_banner">
