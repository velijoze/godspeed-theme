<div data-section-id="{{ section.id }}" data-section-type="section-banner-v10" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %}">
  <div class="section-banner-v10">
    <div class="container container-full p-0">
      {% if section.settings.title_section != blank %}
      <div class="title-info">
        <h3 class="title_heading text-center mb-0" style="color: {{section.settings.color_heading}}">{{section.settings.title_section}}</h3>
      </div>
      {% endif %}

      <div class="row  no-gutters">   
        <div class="col-md-9 banner-left">
          <div class="row no-gutters">
            <div class="col-md-8">
              <div class="item-banner">
                <div class="img-banner">
                  <img data-src="{% if section.settings.img_banner1 != blank %} {{section.settings.img_banner1 | img_url : 'master'}} {% else %} //via.placeholder.com/950x475 {% endif %}" class="lazyload img-fluid w-100" alt="_img_banner">
                </div>
                <div class="content-banner style-1">
                  <div class="banner-info">
                    {% if section.settings.subtitle_banner1 != blank %}
                    <h6 class="title"> {{section.settings.subtitle_banner1}}</h6>
                    {% endif %}
                    <h3 class="bigtitle"> <span>{{section.settings.title_banner1}}</span></h3>

                    <a class="button" target="_self" href="{{section.settings.link_banner1}}"> <span>{{section.settings.button_banner1}}</span> </a>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="item-banner">
                <div class="img-banner">
                  <img data-src="{% if section.settings.img_banner3 != blank %} {{section.settings.img_banner2 | img_url : 'master'}} {% else %} //via.placeholder.com/475x475 {% endif %}" class="lazyload img-fluid w-100" alt="_img_banner">
