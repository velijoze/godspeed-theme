{% comment %}
  Why Benefits Section
  3-column benefits layout for Why page
{% endcomment %}

<div class="why-benefits-section">
  <div class="container">
    {% if section.settings.title != blank %}
      <div class="row">
        <div class="col-12 text-center">
          <h2 class="why-benefits-title">{{ section.settings.title }}</h2>
        </div>
      </div>
    {% endif %}
    
    <div class="row benefits-grid">
      {% for block in section.blocks %}
        <div class="col-lg-4 col-md-6 mb-4" {{ block.shopify_attributes }}>
          <div class="benefit-card">
            {% if block.settings.icon_svg != blank %}
              <div class="benefit-icon">
                {{ block.settings.icon_svg }}
              </div>
            {% endif %}
            
            {% if block.settings.title != blank %}
              <h3 class="benefit-title">{{ block.settings.title }}</h3>
            {% endif %}
            
            {% if block.settings.content != blank %}
              <div class="benefit-content">{{ block.settings.content }}</div>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
.why-benefits-section {
  padding: {{ section.settings.padding_top | default: 50 }}px 0 {{ section.settings.padding_bottom | default: 50 }}px 0;
  background: {{ section.settings.bg_color | default: '#ffffff' }};
}

.why-benefits-title {
  font-size: 2rem;
  font-weight: 700;
  color: {{ section.settings.title_color | default: '#2c3e50' }};
  margin-bottom: 3rem;
  text-align: center;
  font-family: var(--font-heading);
}

.benefits-grid {
  justify-content: center;
}

.benefit-card {
  text-align: center;
  padding: 2rem 1.5rem;
  border-radius: 16px;
  background: {{ section.settings.card_bg | default: '#f8f9fa' }};
  border: 2px solid transparent;
  transition: all 0.3s ease;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.benefit-card:hover {
  border-color: {{ section.settings.accent_color | default: settings.color_main2 }};
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.benefit-icon {
  width: 80px;
  height: 80px;
  margin: 0 auto 1.5rem auto;
  display: flex;
  align-items: center;
  justify-content: center;
  background: {{ section.settings.icon_bg | default: settings.color_main2 }};
  border-radius: 50%;
  padding: 1rem;
}

.benefit-icon svg {
  width: 100%;
  height: 100%;
  fill: {{ section.settings.icon_color | default: '#ffffff' }};
  stroke: {{ section.settings.icon_color | default: '#ffffff' }};
}

.benefit-title {
  font-size: 1.3rem;
  font-weight: 600;
  color: {{ section.settings.title_color | default: '#2c3e50' }};
  margin-bottom: 1rem;
  font-family: var(--font-heading);
}

.benefit-content {
  font-size: 0.95rem;
  color: {{ section.settings.content_color | default: '#6c757d' }};
  line-height: 1.6;
  flex: 1;
}

@media (max-width: 992px) {
  .why-benefits-title {
    font-size: 1.7rem;
  }
  
  .benefit-card {
    margin-bottom: 2rem;
  }
}

@media (max-width: 768px) {
  .why-benefits-section {
    padding: 60px 0;
  }
  
  .why-benefits-title {
    font-size: 1.5rem;
    margin-bottom: 2rem;
  }
  
  .benefit-card {
    padding: 1.5rem;
  }
  
  .benefit-icon {
    width: 60px;
    height: 60px;
  }
  
  .benefit-title {
    font-size: 1.1rem;
  }
}
</style>

