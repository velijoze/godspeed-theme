<div data-section-id="{{ section.id }}" data-section-type="shipping-policy" style="{% if section.settings.margin_top != blank %}margin-top: {{section.settings.margin_top}}px;{%endif%} {% if section.settings.margin_bottom != blank %}margin-bottom: {{section.settings.margin_bottom}}px;{% endif %} {% if section.settings.sections_layout == "dark" %}background: {{section.settings.sections_bg_color}};{% endif %}">
  <div class="container container-v2">
    <div class="shipping-policy-section">
      {% if section.settings.section_title != blank %}
      <div class="section-header text-center">
        <h2 class="section-title">{{ section.settings.section_title }}</h2>
        {% if section.settings.section_subtitle != blank %}
        <p class="section-subtitle">{{ section.settings.section_subtitle }}</p>
        {% endif %}
      </div>
      {% endif %}

      <div class="shipping-content">
        <!-- Delivery Coverage -->
        {% if section.settings.show_coverage %}
        <div class="shipping-block">
          <h3>{{ section.settings.coverage_title | default: "Delivery Coverage" }}</h3>
          <p>{{ section.settings.coverage_content | default: "We deliver throughout Switzerland and Liechtenstein. International shipping may be available upon request - please contact us for details." }}</p>
        </div>
        {% endif %}

        <!-- Shipping Rates Table -->
        {% if section.settings.show_rates %}
        <div class="shipping-block">
          <h3>{{ section.settings.rates_title | default: "Shipping Rates" }}</h3>
          <div class="shipping-rates-table">
            <table>
              <thead>
                <tr>
                  <th>Weight Range</th>
                  <th>Shipping Cost</th>
                  <th>Typical Items</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Under 10kg</td>
                  <td>CHF 9.95</td>
                  <td>Accessories, parts, clothing</td>
                </tr>
                <tr>
                  <td>10-32kg</td>
                  <td>CHF 49.95</td>
                  <td>Bikes, larger parts</td>
                </tr>
                <tr>
                  <td>32-100kg</td>
                  <td>CHF 59.95</td>
                  <td>E-bikes, cargo bikes</td>
                </tr>
              </tbody>
            </table>
          </div>
          <p class="rates-note">Free shipping promotions may apply to certain orders. Check checkout for current offers.</p>
        </div>
        {% endif %}

        <!-- Delivery Timeframes -->
        {% if section.settings.show_timeframes %}
        <div class="shipping-block">
          <h3>{{ section.settings.timeframes_title | default: "Delivery Timeframes" }}</h3>
          <div class="delivery-types">
            <div class="delivery-type">
              <h4>Standard Delivery</h4>
              <ul>
                <li>Small items: 1-2 business days</li>
                <li>Bicycles: 2-3 business days</li>
                <li>E-bikes: 3-5 business days</li>
                <li>Special orders: 7-14 business days</li>
              </ul>
            </div>
            <div class="delivery-type">
              <h4>Express Delivery</h4>
              <ul>
                <li>Next-day delivery available for orders placed before 12:00 PM</li>
                <li>Excludes e-bikes, bikes, and large items</li>
                <li>Additional charges may apply</li>
              </ul>
            </div>
          </div>
        </div>
        {% endif %}

        <!-- Assembly Service -->
        {% if section.settings.show_assembly %}
        <div class="shipping-block assembly-highlight">
          <h3>{{ section.settings.assembly_title | default: "Professional Assembly Service - CHF 150" }}</h3>
          <p>Have your bike delivered fully assembled and ready to ride:</p>
          <ul>
            <li>Professional assembly by certified mechanics</li>
            <li>Complete safety check</li>
            <li>Basic adjustments for your height</li>
            <li>Test ride completed</li>
            <li>Ready to ride upon delivery</li>
          </ul>
        </div>
        {% endif %}

        <!-- Store Pickup -->
        {% if section.settings.show_pickup %}
        <div class="shipping-block">
          <h3>{{ section.settings.pickup_title | default: "Store Pickup Option" }}</h3>
          <p>Save on shipping by picking up at any of our locations:</p>
          <ul>
            <li>Free of charge</li>
            <li>Ready for pickup within 1-2 business days</li>
            <li>Email notification when ready</li>
            <li>Bring ID for collection</li>
          </ul>
        </div>
        {% endif %}

        <!-- Packaging Notice -->
        {% if section.settings.show_packaging %}
        <div class="shipping-block eco-notice">
          <h3>{{ section.settings.packaging_title | default: "Eco-Friendly Packaging Notice" }}</h3>
          <p>{{ section.settings.packaging_content | default: "We use recycled and repurposed packaging materials. Your box may appear worn or previously used - this is our commitment to reducing waste. Rest assured, your products are securely packed and protected inside." }}</p>
        </div>
        {% endif %}

        <!-- Contact Information -->
        {% if section.settings.show_contact %}
        <div class="shipping-block contact-info">
          <h3>{{ section.settings.contact_title | default: "Questions?" }}</h3>
          <p>For shipping inquiries:</p>
          <ul>
            <li>Email: {{ section.settings.contact_email | default: "shipping@godspeed.ch" }}</li>
            <li>Phone: {{ section.settings.contact_phone | default: "+41 91 224 53 43" }}</li>
            <li>Live chat during business hours</li>
          </ul>
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

