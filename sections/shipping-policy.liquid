{% stylesheet %}
.shipping-policy-section {
  max-width: 1000px;
  margin: 0 auto;
  padding: 40px 20px;
}

.section-header {
  margin-bottom: 40px;
}

.section-title {
  font-size: 2.5rem;
  font-weight: 700;
  margin-bottom: 15px;
  line-height: 1.3;
}

.section-subtitle {
  font-size: 1.1rem;
  color: #666;
  margin-bottom: 0;
  line-height: 1.4;
}

.shipping-content {
  display: grid;
  gap: 30px;
}

.shipping-block {
  background: #f8f9fa;
  padding: 25px;
  border-radius: 8px;
  border-left: 4px solid #ff4040;
}

.shipping-block h3 {
  color: #2c3e50;
  font-size: 1.4rem;
  font-weight: 600;
  margin-bottom: 15px;
  line-height: 1.3;
}

.shipping-block h4 {
  color: #34495e;
  font-size: 1.1rem;
  font-weight: 600;
  margin-bottom: 10px;
  margin-top: 20px;
  line-height: 1.3;
}

.shipping-block h4:first-child {
  margin-top: 0;
}

.shipping-block p {
  margin-bottom: 15px;
  line-height: 1.4;
  color: #555;
}

.shipping-block ul {
  margin-bottom: 15px;
  padding-left: 20px;
}

.shipping-block li {
  margin-bottom: 8px;
  line-height: 1.4;
  color: #555;
}

.shipping-rates-table {
  margin: 20px 0;
  overflow-x: auto;
}

.shipping-rates-table table {
  width: 100%;
  border-collapse: collapse;
  background: white;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.shipping-rates-table th,
.shipping-rates-table td {
  padding: 15px;
  text-align: left;
  border-bottom: 1px solid #eee;
}

.shipping-rates-table th {
  background: #ff4040;
  color: white;
  font-weight: 600;
  font-size: 0.95rem;
}

.shipping-rates-table td {
  font-size: 0.9rem;
  color: #555;
}

.shipping-rates-table tr:hover {
  background: #f8f9fa;
}

.rates-note {
  font-size: 0.9rem;
  font-style: italic;
  color: #666;
  margin-top: 15px;
}

.delivery-types {
  display: grid;
  gap: 25px;
  margin-top: 20px;
}

.delivery-type {
  background: white;
  padding: 20px;
  border-radius: 6px;
  border: 1px solid #e9ecef;
}

.assembly-highlight {
  border-left-color: #ff4040;
  background: linear-gradient(135deg, #fff5f2 0%, #f8f9fa 100%);
}

.assembly-highlight h3 {
  color: #d63031;
}

.eco-notice {
  border-left-color: #00b894;
  background: linear-gradient(135deg, #f1fffe 0%, #f8f9fa 100%);
}

.eco-notice h3 {
  color: #00b894;
}

.contact-info {
  border-left-color: #6c5ce7;
  background: linear-gradient(135deg, #f8f7ff 0%, #f8f9fa 100%);
}

.contact-info h3 {
  color: #5f3dc4;
}

@media (min-width: 768px) {
  .delivery-types {
    grid-template-columns: 1fr 1fr;
  }
  
  .shipping-policy-section {
    padding: 60px 20px;
  }
}
{% endstylesheet %}

