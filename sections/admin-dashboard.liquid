// Normalize different supplier data formats
function normalizeProductData(supplier, data) {
  if (!data) return [];
  
  switch (supplier) {
    case 'abus':
      return data.products?.map(p => ({
        sku: p.articleNumber,
        name: p.productName,
        price: p.priceList?.retailPrice || 0,
        stock: p.stock || 0,
        updated_at: p.lastModified
      })) || [];
      
    case 'amsler':
      return data.items?.map(p => ({
        sku: p.SKU,
        name: p.Name,
        price: parseFloat(p.Price) || 0,
        stock: parseInt(p.Stock) || 0,
        updated_at: p.LastUpdate
      })) || [];
      
    case 'maxxis':
      return data.products?.map(p => ({
        sku: p.sku,
        name: p.title,
        price: p.price || 0,
        stock: p.quantity || 0,
        updated_at: p.modified_date
      })) || [];
      
    case 'orbea':
      return data.map(p => ({
        sku: p.model_code,
        name: p.model_name,
        price: p.msrp || 0,
        stock: p.stock_quantity || 0,
        updated_at: p.last_updated
      })) || [];
      
    default:
      // Generic format
      return Array.isArray(data) ? data : data.products || [];
  }
}

