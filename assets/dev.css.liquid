/* Typography overrides: use modern Shopify font_picker variables */
body { font-family: var(--font-body) !important; }
h1, h2, h3, h4, h5, h6 { font-family: var(--font-heading) !important; }
/* Common nav/menu containers */
.main-nav, .site-nav, .nav, .menu, .navigation, .header-menu, .menu-title { font-family: var(--font-nav) !important; }
/* Form controls */
button, input, select, textarea { font-family: var(--font-body) !important; }
/* Links and buttons */
a, .btn, .button, [class*="btn-"], [class*="button-"] { font-family: var(--font-body) !important; }

/* Global accent colors for common buttons */
:root { --accent: {{ settings.color_main2 }}; }
.btn, .btn-primary, .button, .button-main2, .button-shop, .btn-banner {
  background-color: var(--accent);
  border-color: var(--accent);
  color: #fff;
}
.btn:hover, .btn-primary:hover, .button:hover, .button-main2:hover, .button-shop:hover, .btn-banner:hover {
  background-color: {{ settings.color_main2 | color_darken: 10 }};
  border-color: {{ settings.color_main2 | color_darken: 10 }};
  color: #fff;
}

/* Management polish: product, collection, cart */
/* Product titles and prices */
.product-title, .grid-product__title, .product-details .product-title {
  font-family: var(--font-heading) !important;
  font-weight: 600;
  line-height: 1.25;
  margin-bottom: 6px;
}
.product-price, .price, .enj-product-price, .engo_price_main {
  font-family: var(--font-body) !important;
  font-size: 1rem;
  line-height: 1.2;
}
.enj-product-price-compare, .price--compare { opacity: 0.7; text-decoration: line-through; margin-left: 6px; }

/* Collection cards spacing */
.grid-uniform .grid__item, .product-grid .grid__item, .collection .product-item {
  padding: 12px !important;
}
.collection .product-item .product-bottom { padding-top: 8px; }

/* Cart table spacing */
.page-cart table { border-collapse: collapse; width: 100%; }
.page-cart th, .page-cart td { padding: 12px 10px; border-bottom: 1px solid #eee; }
.page-cart .cart__row:last-child td { border-bottom: none; }

/* Cart: make checkout/payment buttons more compact */
.page-cart .checkout-button.button {
  font-size: 14px;
  line-height: 1.2;
  padding: 10px 16px;
  border-radius: 999px;
}
.page-cart .wc-proceed-to-checkout { display: flex; gap: 10px; align-items: center; flex-wrap: wrap; }

/* Dynamic payment buttons (if enabled) */
.page-cart .shopify-payment-button, 
.page-cart .additional-checkout-buttons, 
.page-cart .cart__dynamic-checkout-buttons {
  transform: scale(0.92);
  transform-origin: left center;
  margin-top: 6px;
}
@media (max-width: 768px) {
  .page-cart .shopify-payment-button, 
  .page-cart .additional-checkout-buttons, 
  .page-cart .cart__dynamic-checkout-buttons { transform: scale(0.98); }
  .page-cart .checkout-button.button { width: 100%; text-align: center; }
}

