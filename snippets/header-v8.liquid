{% if section.settings.select_hds == "header_v8" %}
{% if template contains 'index' %}
<header id="header" class="homepage header-v8-h8 js_height_hd jsheader_sticky d-none d-xl-block {% if section.settings.hd_home_enable_transparents %}header-absolute {% endif %}">
  <div class="container container-v5">
    <div class="header-table">
      <div class="header-left">
        {% if section.settings.enable_social %}
        <div class="casano-socials">
          {% if section.settings.icon_sc_hd_1 !=blank %}
          <a href="{{section.settings.url_sc_hd_1}}" target="_blank" class="social-item">{{section.settings.icon_sc_hd_1}}</a>
          {% endif %}
          {% if section.settings.icon_sc_hd_2 !=blank %}
          <a href="{{section.settings.url_sc_hd_2}}" target="_blank" class="social-item">{{section.settings.icon_sc_hd_2}}</a>
          {% endif %}
          {% if section.settings.icon_sc_hd_3 !=blank %}
          <a href="{{section.settings.url_sc_hd_3}}" target="_blank" class="social-item">{{section.settings.icon_sc_hd_3}}</a>
          {% endif %}
        </div>
        {% endif %}
      </div>
      <div class="header-center">
        <div class="menu">
          {% include 'eveland-menu' %}
        </div>
      </div>
      <div class="header-control-right">
        <div class="currencies-login">    
          {% if section.settings.enable_multi_lang %}
          <div class="menu-language-wrap">
            {% include 'change-language' %}
          </div>
          {% endif%}

          {% if section.settings.enable_currency %}
          <div class="menu-currency-wrap">
            {% include 'currency' %}
          </div>
          {% endif %}

          <div class="cart-login-search align-items-center"> 
            <ul class="list-inline list-unstyled mb-0">
              <li class="list-inline-item mr-0">
                <a href="javascript:void(0)" class="search js-search-destop">
                  {% if section.settings.hd_icon_search_svg != blank %}
                  {{section.settings.hd_icon_search_svg}}
                  {% else %}
                  <i class="{{section.settings.hd_icon_search}}"></i>
                  {% endif %}
                </a>
              </li>
              <li class="list-inline-item mr-0">
                <a href="{% if customer %}/account {% else %}javascript:void(0){% endif %}" class="login {% if customer %}{% else %}js-call-popup-login{% endif %}">
                  {% if section.settings.hd_icon_login_svg != blank %}
                  {{section.settings.hd_icon_login_svg}}
                  {% else %}
                  <i class="{{section.settings.hd_icon_login}}"></i>
                  {% endif %}

                </a>
              </li>
              <li class="list-inline-item mr-0">
                <a href="{{section.settings.url_wishlist}}" class="">
                  {% if section.settings.hd_icon_wishlist_svg != blank %}
                  {{section.settings.hd_icon_wishlist_svg}}
                  {% else %}
                  <i class="{{section.settings.hd_icon_wishlist}}"></i>
                  {% endif %}

                </a>
              </li>
              <li class="list-inline-item mr-0">
                <a href="javascript:void(0)" class="cart js-call-minicart">
                  {% if section.settings.hd_icon_cart_svg != blank %}
                  {{section.settings.hd_icon_cart_svg}}
                  {% else %}
                  <i class="{{section.settings.hd_icon_cart}}"></i>
                  {% endif %}
                  <span class="count_pr_incart js-number-cart number-cart">{% if cart.item_count > 0 %} {{cart.item_count}} {% else %} 0 {% endif %}</span>
                </a>
              </li>
            </ul>

          </div>

          <div class="clearfix"></div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  jQuery(document).ready(function($) {
    
    function hexToRgb(hex) {
      var result = /^#?([a-f\d]{2})([a-f\d]{2})([a-f\d]{2})$/i.exec(hex);
      return result ? {
        r: parseInt(result[1], 16),
        g: parseInt(result[2], 16),
        b: parseInt(result[3], 16)
      } : null;
    }
    var r = (hexToRgb("{{section.settings.hd_home_bg_header_normal}}").r);
    var g = (hexToRgb("{{section.settings.hd_home_bg_header_normal}}").g);
    var b = (hexToRgb("{{section.settings.hd_home_bg_header_normal}}").b)
    {% if section.settings.hd_home_enable_transparents %}
    {% else %}                  
    $('.header-v8-h8').css({'background':'rgba(' + r + ' ,' + g + ',' + b + ',{{section.settings.hd_bg_header_opacity}})'});
    {% endif %}
    
    {% if section.settings.enable_sticky_hd_home  %}
    function menudestopscroll1() {
      var $nav = $(".jsheader_sticky");
      $nav.removeClass('menu_scroll_v8');
    
      $(document).scroll(function() {

        $nav.toggleClass('menu_scroll_v8', $(this).scrollTop() > $nav.height());
        var r = (hexToRgb("{{section.settings.hd_home_bg_header_normal}}").r);
        var g = (hexToRgb("{{section.settings.hd_home_bg_header_normal}}").g);
        var b = (hexToRgb("{{section.settings.hd_home_bg_header_normal}}").b)
        $('.header-v8-h8.menu_scroll_v8').css({'background':'rgba(' + r + ' ,' + g + ',' + b + ',{{section.settings.hd_bg_header_opacity}})'});
        {% if section.settings.hd_home_enable_transparents %}                    
        if($(this).scrollTop() < $nav.height()){
          $('.header-v8-h8').css({'background':'none'}); 
            $nav.removeClass('menu_scroll_v8')
        }
        {% endif %}                
      });
    } 
    menudestopscroll1();
    {% endif %}
    
    
  });
</script>

<style>
  #header .menu ul li .nav-link{
    color: {{section.settings.hd_home_color_text}};
  }
  #header .currencies-login .cart-login-search ul li a svg{
    fill : {{section.settings.hd_home_color_text}};
  }
  #header .currencies-login .cart-login-search ul li a i{
    color : {{section.settings.hd_home_color_text}};
  }
    #header .currencies-login .cart-login-search ul li a svg{
    fill : {{section.settings.hd_home_color_text}};
  }
  #header .casano-socials .social-item{
    color : {{section.settings.hd_home_color_text}};
  }
  .header-v1-h1.menu_scroll_v1{
   background-color : rgba( {{section.settings.hd_home_bg_header_normal}} ,{{section.settings.hd_bg_header_opacity}});
  }
</style>

{% endif %}

