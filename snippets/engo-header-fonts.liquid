{%- comment -%} Font loading for font_picker theme {%- endcomment -%}

<style>
  {%- comment -%} Load font_picker fonts properly {%- endcomment -%}
  {% if settings.heading_font %}
    {{ settings.heading_font | font_face: font_display: 'swap' }}
  {% endif %}
  {% if settings.body_font %}
    {{ settings.body_font | font_face: font_display: 'swap' }}
  {% endif %}
  {% if settings.navigation_font %}
    {{ settings.navigation_font | font_face: font_display: 'swap' }}
  {% endif %}
</style>

{%- comment -%} Load fallback font if no custom fonts selected {%- endcomment -%}
{% unless settings.heading_font and settings.body_font and settings.navigation_font %}
  <link href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500;600;700&display=swap" rel="stylesheet">
{% endunless %}