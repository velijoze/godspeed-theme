{% comment %}
  Modern Grid Demo - Showcases CSS Grid and modern features
  This snippet demonstrates the new grid system without affecting existing layouts
{% endcomment %}

<div class="modern-features-demo">
  <h2 class="demo-title">Modern Grid Features Demo</h2>
  
  <!-- CSS Grid Product Grid -->
  <section class="demo-section">
    <h3>CSS Grid Product Layout</h3>
    <div class="product-grid-modern">
      {% for i in (1..6) %}
        <div class="product demo-product">
          <div class="product-image">
            <div class="placeholder-image aspect-ratio-square"></div>
          </div>
          <div class="product-info">
            <h4>Demo Product {{ i }}</h4>
            <p class="price">${{ i }}9.99</p>
            <button class="btn btn-primary">Add to Cart</button>
          </div>
        </div>
      {% endfor %}
    </div>
  </section>

  <!-- Card Grid -->
  <section class="demo-section">
    <h3>Modern Card Grid</h3>
    <div class="card-grid">
      {% for i in (1..4) %}
        <div class="card">
          <div class="card-header">
            <h4>Card {{ i }}</h4>
          </div>
          <div class="card-body">
            <p>This is a modern card using CSS Grid with hover effects and smooth transitions.</p>
          </div>
          <div class="card-footer">
            <button class="btn btn-secondary">Learn More</button>
          </div>
        </div>
      {% endfor %}
    </div>
  </section>

  <!-- Masonry Grid -->
  <section class="demo-section">
    <h3>Masonry-style Grid</h3>
    <div class="masonry-grid">
      {% for i in (1..8) %}
        <div class="masonry-item {% if i == 1 or i == 4 %}tall{% endif %} {% if i == 2 or i == 6 %}wide{% endif %}">
          <div class="masonry-content">
            <h4>Item {{ i }}</h4>
            <p>Masonry grid item with dynamic sizing.</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </section>

  <!-- Container Query Demo -->
  <section class="demo-section">
    <h3>Container Queries Demo</h3>
    <div class="container-responsive">
      <div class="responsive-item">Responsive Item 1</div>
      <div class="responsive-item">Responsive Item 2</div>
      <div class="responsive-item">Responsive Item 3</div>
      <div class="responsive-item">Responsive Item 4</div>
    </div>
  </section>

  <!-- Modern Form Demo -->
  <section class="demo-section">
    <h3>Modern Form with Validation</h3>
    <form class="modern-form" data-modern-validation data-auto-save="demo-form">
      <div class="form-group">
        <label for="demo-name">Name</label>
        <input type="text" id="demo-name" name="name" required>
      </div>
      <div class="form-group">
        <label for="demo-email">Email</label>
        <input type="email" id="demo-email" name="email" required>
      </div>
      <div class="form-group">
        <label for="demo-message">Message</label>
        <textarea id="demo-message" name="message" rows="4"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </section>
</div>

<style>
  .modern-features-demo {
    padding: 2rem;
    max-width: 1200px;
    margin: 0 auto;
  }

  .demo-title {
    text-align: center;
    margin-bottom: 2rem;
    color: var(--grid-primary-color);
  }

  .demo-section {
    margin-bottom: 3rem;
    padding: 2rem;
    border: 1px solid #e0e0e0;
    border-radius: var(--grid-border-radius);
  }

  .demo-section h3 {
    margin-bottom: 1.5rem;
    color: var(--grid-secondary-color);
  }

  .demo-product {
    background: white;
    border-radius: var(--grid-border-radius);
    box-shadow: var(--grid-shadow);
    overflow: hidden;
    transition: var(--grid-transition);
  }

  .demo-product:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .placeholder-image {
    background: linear-gradient(45deg, #f0f0f0, #e0e0e0);
    width: 100%;
    height: 200px;
  }

  .product-info {
    padding: 1rem;
  }

  .product-info h4 {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
  }

  .price {
    font-weight: bold;
    color: var(--grid-primary-color);
    margin-bottom: 1rem;
  }

  .card {
    background: white;
    border-radius: var(--grid-border-radius);
    box-shadow: var(--grid-shadow);
    overflow: hidden;
    transition: var(--grid-transition);
  }

  .card:hover {
    transform: translateY(-4px);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
  }

  .card-header {
    background: var(--grid-primary-color);
    color: white;
    padding: 1rem;
  }

  .card-header h4 {
    margin: 0;
  }

  .card-body {
    padding: 1rem;
  }

  .card-footer {
    padding: 1rem;
    background: #f8f9fa;
    border-top: 1px solid #e9ecef;
  }

  .masonry-item {
    background: white;
    padding: 1rem;
    border-radius: var(--grid-border-radius);
    box-shadow: var(--grid-shadow);
    border: 1px solid #e0e0e0;
  }

  .masonry-content h4 {
    margin: 0 0 0.5rem 0;
    color: var(--grid-primary-color);
  }

  .responsive-item {
    background: var(--grid-primary-color);
    color: white;
    padding: 1rem;
    text-align: center;
    border-radius: var(--grid-border-radius);
  }

  .modern-form {
    max-width: 500px;
  }

  .form-group {
    margin-bottom: 1rem;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    transition: var(--grid-transition);
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: var(--grid-primary-color);
    box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
  }

  .form-group input.valid {
    border-color: #28a745;
  }

  .form-group input.error {
    border-color: #dc3545;
  }

  .field-message {
    font-size: 0.875rem;
    margin-top: 0.25rem;
  }

  .field-message.valid {
    color: #28a745;
  }

  .field-message.error {
    color: #dc3545;
  }

  .btn {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    transition: var(--grid-transition);
    text-decoration: none;
    display: inline-block;
  }

  .btn-primary {
    background: var(--grid-primary-color);
    color: white;
  }

  .btn-primary:hover {
    background: #0056b3;
    transform: translateY(-1px);
  }

  .btn-secondary {
    background: var(--grid-secondary-color);
    color: white;
  }

  .btn-secondary:hover {
    background: #545b62;
    transform: translateY(-1px);
  }
</style>

