{% comment %}
  Test Ride Button
  Add this to product pages to show a "Book Test Ride" button
  Usage: {% render 'test-ride-button', product: product %}
{% endcomment %}

{% assign is_bike = false %}
{% for collection in product.collections %}
  {% if collection.handle contains 'bike' or collection.handle contains 'e-bike' or collection.handle contains 'bicycle' %}
    {% assign is_bike = true %}
    {% break %}
  {% endif %}
{% endfor %}

{% if product.available and is_bike %}
<div class="test-ride-button-wrapper">
  <button type="button" class="test-ride-button btn-test-ride" onclick="openTestRideModal({
    id: {{ product.id }},
    handle: '{{ product.handle }}',
    title: '{{ product.title | escape }}',
    price: '{{ product.price | money }}',
    image: '{{ product.featured_image | img_url: 'medium' }}'
  })">
    Book Test Ride
  </button>
</div>

<style>
.test-ride-button-wrapper {
  margin: 10px 0 0 0;
}

.btn-test-ride {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 0 16px;
  background: {{ settings.color_main2 }};
  color: #fff;
  border: 2px solid {{ settings.color_main2 }};
  border-radius: 6px;
  font-weight: 600;
  font-size: 14px;
  text-transform: uppercase;
  letter-spacing: 0.3px;
  cursor: pointer;
  transition: all 0.3s ease;
  text-decoration: none;
  position: relative;
  overflow: hidden;
  height: 44px;
  line-height: 42px;
  font-family: var(--font-body) !important;
}

.btn-test-ride::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
  transition: left 0.5s;
}

.btn-test-ride:hover::before {
  left: 100%;
}

.btn-test-ride:hover {
  background: {{ settings.color_main2 | color_darken: 10 }};
  border-color: {{ settings.color_main2 | color_darken: 10 }};
  transform: translateY(-1px);
  box-shadow: 0 4px 12px rgba(46, 125, 50, 0.25);
}

.btn-test-ride:active {
  transform: translateY(0);
}

.test-ride-icon {
  width: 20px;
  height: 20px;
  flex-shrink: 0;
}

@media (max-width: 768px) {
  .btn-test-ride {
  width: 100%;
  justify-content: center;
  padding: 0 16px;
  }
}
</style>

</div>
{% endif %}
