  <style>
    .currency-selector {
      position: relative;
      display: inline-block;
    }
    .currency-selector__button {
      background: none;
      border: none;
      padding: 8px 12px;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: 14px;
      color: inherit;
    }
    .disclosure__list-wrapper {
      position: absolute;
      top: 100%;
      left: 0;
      background: white;
      border: 1px solid #ddd;
      border-radius: 4px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
      z-index: 1000;
      min-width: 120px;
    }
    .disclosure__list {
      margin: 0;
      padding: 8px 0;
      list-style: none;
    }
    .disclosure__item {
      margin: 0;
    }
    .disclosure__link {
      display: block;
      padding: 8px 16px;
      text-decoration: none;
      color: inherit;
      transition: background-color 0.2s;
    }
    .disclosure__link:hover {
      background-color: #f5f5f5;
    }
    .disclosure__link--active {
      background-color: #e0e0e0;
      font-weight: bold;
    }
    .icon-caret {
      width: 12px;
      height: 12px;
      transition: transform 0.2s;
    }
    .disclosure__button[aria-expanded="true"] .icon-caret {
      transform: rotate(180deg);
    }
  </style>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const currencyForm = document.getElementById('currency-localization-form');
      const currencyButton = document.querySelector('.currency-selector__button');
      const currencyList = document.getElementById('CurrencyList');
      const currencyLinks = document.querySelectorAll('.currency-selector .disclosure__link');
      
      // Toggle currency list
      if (currencyButton && currencyList) {
        currencyButton.addEventListener('click', function() {
          const isExpanded = this.getAttribute('aria-expanded') === 'true';
          this.setAttribute('aria-expanded', !isExpanded);
          currencyList.parentElement.hidden = isExpanded;
        });
      }
      
      // Handle currency selection
      currencyLinks.forEach(link => {
        link.addEventListener('click', function(e) {
          e.preventDefault();
          const currency = this.getAttribute('data-value');
          
          // Update the form and submit
          const formData = new FormData(currencyForm);
          formData.set('currency_code', currency);
          
          fetch(window.location.pathname, {
            method: 'POST',
            body: formData,
            headers: {
              'X-Requested-With': 'XMLHttpRequest'
            }
          }).then(() => {
            window.location.reload();
          });
        });
      });
    });
  </script>
